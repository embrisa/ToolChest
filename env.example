# Next.js tool-chest Environment Configuration
# Copy this file to .env.local and update with your values

# ===== DATABASE =====
# PostgreSQL database connection URL
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://username:password@localhost:5432/toolchest"

# ===== NEXT.JS CONFIGURATION =====
# Environment (development, production, test)
NODE_ENV=development

# Next.js server port (default: 3000)
PORT=3000

# ===== AUTHENTICATION & SECURITY =====
# Simple admin authentication token (replace with secure token)
ADMIN_SECRET_TOKEN="your-secure-admin-token-here"

# Session secret for admin authentication (replace with secure secret)
ADMIN_SESSION_SECRET="your-secure-session-secret-here"

# Session timeout in milliseconds (1 hour = 3600000)
ADMIN_SESSION_TIMEOUT=3600000

# Remember me timeout in milliseconds (30 days = 2592000000)
ADMIN_REMEMBER_ME_TIMEOUT=2592000000

# Bcrypt rounds for password hashing
ADMIN_BCRYPT_ROUNDS=12

# Default admin password for seeding (change immediately)
ADMIN_DEFAULT_PASSWORD="admin123"

# ===== PERFORMANCE & CACHING =====
# Enable/disable caching in development
ENABLE_CACHING=false

# Cache TTL in seconds
CACHE_TTL=300

# ===== ANALYTICS & MONITORING =====
# Enable analytics tracking
ENABLE_ANALYTICS=true

# Enable error logging
ENABLE_ERROR_LOGGING=true

# ===== DEVELOPMENT SETTINGS =====
# Enable development logging
ENABLE_DEV_LOGGING=true

# Hot reload settings
ENABLE_HOT_RELOAD=true

# ===== EXTERNAL SERVICES =====
# Add external service configurations here as needed
# SENTRY_DSN=""
# GOOGLE_ANALYTICS_ID=""

# ===== FEATURE FLAGS =====
# Enable/disable specific features during development
FEATURE_BASE64_TOOL=true
FEATURE_HASH_GENERATOR=true
FEATURE_FAVICON_GENERATOR=true
FEATURE_MARKDOWN_TO_PDF=true
FEATURE_ADMIN_DASHBOARD=true

# ===== FILE PROCESSING =====
# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Large file threshold for progress indicators (5MB = 5242880)
LARGE_FILE_THRESHOLD=5242880

# ===== CORS & SECURITY HEADERS =====
# Allowed origins for CORS (development)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"

# Security headers
ENABLE_SECURITY_HEADERS=true 