{# src/templates/pages/coming-soon.njk #}
{% extends "../layouts/base.njk" %}

{% block title %}{{ pageTitle | default('Coming Soon') }} - {{ appName }}{% endblock %}
{% block description %}{{ pageDescription | default('This page is under construction.') }}{% endblock %}

{% block content %}
    <div class="text-center py-20">
        <i class="fas fa-person-digging text-6xl text-yellow-500 mb-6"></i>
        <h1 class="text-4xl font-bold mb-4">{{ pageTitle | default('Coming Soon!') }}</h1>
        <p class="text-xl text-gray-700 mb-8">{{ pageDescription | default('We are working hard to bring you this page. Stay tuned!') }}</p>
        <a href="/" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition-colors">
            Go to Homepage
        </a>
    </div>
{% endblock %} 