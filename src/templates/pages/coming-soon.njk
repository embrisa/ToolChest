{# src/templates/pages/coming-soon.njk #}
{% extends "../layouts/base.njk" %}

{% block title %}{{ pageTitle | default('Coming Soon') }} - {{ appName }}{% endblock %}
{% block description %}{{ pageDescription | default('This page is under construction.') }}{% endblock %}

{% block content %}
    <div class="text-center py-20">
        <i class="fas fa-person-digging text-6xl text-sand-300 mb-6"></i>
        <h1 class="text-4xl font-bold mb-4 text-white">{{ pageTitle | default('Coming Soon!') }}</h1>
        <p class="text-xl text-gray-300 mb-8">{{ pageDescription | default('We are working hard to bring you this page. Stay tuned!') }}</p>
        <a href="/" class="btn-primary">
            Go to Homepage
        </a>
    </div>
{% endblock %} 