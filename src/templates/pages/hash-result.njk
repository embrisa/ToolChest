<div class="tool-card p-6 rounded-lg max-w-lg mx-auto shadow-lg">
    <h2 class="text-2xl font-semibold text-sand-100 mb-4">Hash Result</h2>

    {% if inputSummary %}
    <div class="mb-3">
        <p class="text-sm text-neutral-400">Input: <span class="font-medium text-neutral-300">{{ inputSummary }}</span></p>
        <p class="text-sm text-neutral-400">Algorithm: <span class="font-medium text-neutral-300">{{ algorithm }}</span></p>
    </div>
    {% endif %}

    {% if hexHash %}
    <div class="form-field">
        <label for="hexHashOutput" class="form-label">Hexadecimal Hash:</label>
        <textarea id="hexHashOutput" readonly rows="3" class="form-textarea font-mono select-all">{{ hexHash }}</textarea>
    </div>
    <button onclick="navigator.clipboard.writeText(document.getElementById('hexHashOutput').value)"
            class="btn btn-secondary text-xs py-1 px-3">
        Copy Hex Hash
    </button>
    {% elif errorMessage %}
        {# This part is handled by components/error-message.njk if retargeted there by controller #}
        <p class="text-error">{{ errorMessage }}</p>
    {% else %}
        <p class="text-neutral-400">No result generated yet.</p>
    {% endif %}
</div> 