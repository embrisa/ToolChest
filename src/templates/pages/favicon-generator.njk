{% extends "layouts/base.njk" %}

{% block title %}{{ title }} | {{ appName }}{% endblock %}
{% block description %}{{ description }}{% endblock %}

{% block content %}
<header class="mb-8 text-center">
    <h1 class="text-4xl font-bold text-sand-100">{{ title }}</h1>
    <p class="text-lg text-neutral-300">{{ description }}</p>
</header>

<form hx-post="/favicon-generator/generate" 
      hx-target="#favicon-result-container" 
      hx-swap="innerHTML" 
      hx-encoding="multipart/form-data"
      class="tool-card p-6 rounded-lg max-w-lg mx-auto shadow-lg">
    
    <div class="form-field">
        <label for="sourceImage" class="form-label">Upload Source Image (PNG, JPG, SVG)</label>
        <input type="file" 
               name="sourceImage" 
               id="sourceImage" 
               required
               class="form-input">
        <p class="mt-1 text-xs text-neutral-400">Max file size: 5MB.</p>
    </div>

    <div class="text-center">
        <button type="submit" 
                class="btn btn-primary px-6 py-2.5 text-sm">
            Generate Favicons
            <span class="htmx-indicator inline-block ml-2">
                <i class="fas fa-spinner fa-spin"></i>
            </span>
        </button>
    </div>
</form>

<div id="favicon-result-container" class="mt-10">
    {# Results will be loaded here by HTMX #}
</div>
{% endblock %} 