{# src/templates/pages/base64-result.njk #}
{# This template is used for HTMX responses from Base64 operations #}

{% if error %}
    <div class="content-container-light p-4 mb-4 text-sm text-error border-error" role="alert">
        <span class="font-medium">Error:</span> {{ error }}
    </div>
{% elif result %}
    <div class="content-container-light p-4 mb-4 text-sm text-sand-100">
        <h3 class="text-lg font-semibold mb-2 text-sand-100">{{ title | default('Result') }}:</h3>
        <textarea class="form-textarea" rows="5" readonly onclick="this.select();">{{ result }}</textarea>
        {% if originalFileName %}
            <p class="mt-2 text-xs text-neutral-300">Original file: {{ originalFileName }}</p>
        {% endif %}
        {% if encodingType %}
             <p class="mt-1 text-xs text-neutral-300">Type: {{ encodingType }} {% if urlSafe %} (URL Safe){% endif %}</p>
        {% endif %}
    </div>
{% else %}
    <div class="content-container-light p-4 mb-4 text-sm text-sand-300" role="alert">
        <span class="font-medium">Info:</span> No result to display.
    </div>
{% endif %} 