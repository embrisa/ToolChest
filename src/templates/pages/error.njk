{# src/templates/pages/error.njk #}
{% extends "../layouts/base.njk" %}

{% block title %}{{ statusCode | default(500) }} Error - {{ appName }}{% endblock %}
{% block description %}{{ message | default('An unexpected error occurred.') }}{% endblock %}

{% block content %}
<section class="min-h-[calc(100vh-10rem)] flex flex-col items-center justify-center text-center gap-6 px-4">
  <span class="text-6xl font-black text-error">{{ statusCode | default(500) }}</span>
  <h1 class="text-2xl font-semibold text-sand-100">{{ title | default('Oops! Something went wrong.') }}</h1>
  <p class="text-neutral-300">{{ message | default('An unexpected error occurred. We are working to fix it.') }}</p>
  {% if showDetails and stack %}
    <pre class="mt-4 text-left text-xs bg-dark-700/50 p-4 rounded-md overflow-auto max-w-xl text-neutral-400"><code>{{ stack }}</code></pre>
  {% endif %}
  <a href="/" class="btn btn-primary mt-4">Return Home</a>
</section>
{% endblock %} 