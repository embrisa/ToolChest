<div class="bg-white/5 p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-white mb-4">{{ title }}</h2>

    {% if htmlTags %}
    <div class="mb-6">
        <h3 class="text-xl font-medium text-gray-200 mb-2">HTML Tags for your <code>&lt;head&gt;</code>:</h3>
        <pre class="bg-navy-900/70 p-4 rounded-md text-sm text-gray-300 overflow-x-auto whitespace-pre-wrap"><code>{{ htmlTags | escape }}</code></pre>
        <button onclick="navigator.clipboard.writeText(this.previousElementSibling.querySelector('code').textContent)"
                class="mt-2 text-xs bg-ocean-700/50 hover:bg-ocean-700/70 text-white py-1 px-3 rounded">
            Copy Tags
        </button>
    </div>
    {% endif %}

    {% if files and files.length > 0 %}
    <div class="mb-6">
        <h3 class="text-xl font-medium text-gray-200 mb-2">Generated Files:</h3>
        <ul class="list-disc list-inside text-gray-300 space-y-1">
            {% for file in files %}
            <li>{{ file.name }} ({{ (file.size / 1024).toFixed(1) }} KB)</li>
            {% endfor %}
        </ul>
        {% if zipDownloadLink %}
        <div class="mt-4">
            <a href="{{ zipDownloadLink }}" 
               class="inline-block btn-primary text-sm">
                Download All as .ZIP
            </a>
            <p class="text-xs text-gray-500 mt-2">Click to download all favicons as a single ZIP file.</p>
        </div>
        {% endif %}
    </div>
    {% endif %}

    {% if errorMessage %}
    <p class="text-red-500">{{ errorMessage }}</p>
    {% endif %}
</div> 