{# src/templates/pages/home.njk #}
{% extends "../layouts/base.njk" %}

{% block title %}{{ super() }} - Welcome{% endblock %}
{% block description %}The homepage of {{ appName }}.{% endblock %}

{% block content %}
    <h1 class="text-4xl font-semibold mb-6 text-white">Welcome to {{ appName }}</h1>
    
    <div id="tool-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {# Example: Popular Tools - This would be populated by data from ToolService #}
        {% if popularTools and popularTools.length > 0 %}
            {% for tool in popularTools %}
                <a href="/{{ tool.slug }}" class="block cursor-pointer">
                    <div class="tool-card group relative rounded-xl p-6 flex flex-col gap-4 hover:shadow-lg">
                        <span class="fa {{ tool.iconClass | default('fas fa-toolbox') }} text-ocean-400 text-3xl"></span>
                        <h3 class="font-semibold text-lg text-white">{{ tool.name }}</h3>
                        <p class="text-sm text-gray-400">{{ tool.description | truncate(100, true) }}</p>
                        {% if tool.tags and tool.tags.length > 0 %}
                            <div class="mt-auto flex flex-wrap gap-1">
                                {% for tag in tool.tags %}
                                    <span class="tag-badge">{{ tag.name }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </a>
            {% endfor %}
        {% else %}
            <p class="text-gray-300">No tools available at the moment. Check back soon!</p>
        {% endif %}
    </div>

    {# Ad Unit - Horizontal ad between content sections (temporarily commented out for initial AdSense verification)
    {% include "../components/ad-unit.njk" with { 
        slot: '1234567890', 
        format: 'horizontal',
        style: 'display:block; text-align:center; margin:24px 0;' 
    } %}
    #}
{% endblock %} 