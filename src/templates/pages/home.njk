{# src/templates/pages/home.njk #}
{% extends "../layouts/base.njk" %}
{% from 'components/ui/ContentContainer.njk' import ContentContainer %}
{% from 'components/ui/HeroSection.njk' import HeroSection %}
{% from 'components/ui/ToolCard.njk' import ToolCardGrid %}
{% from 'components/ui/EmptyState.njk' import EmptyState %}

{% block title %}{{ super() }} - Utility Tools{% endblock %}
{% block description %}Utility tools for common tasks. Clean and functional.{% endblock %}

{% block content %}
    {# Hero Section #}
    {{ HeroSection(
        title=appName or 'tool-chest',
        subtitle='Utility tools for common tasks. Clean and functional.'
    ) }}
    
    {# Main Content Container #}
    {% call ContentContainer(variant='transparent', padding='sm') %}
        {# Tools Grid using ToolCardGrid component #}
        {{ ToolCardGrid(
            tools=popularTools,
            variant='modern',
            showTags=true,
            emptyStateTitle='No tools available',
            emptyStateDescription='Check back later for new utility tools.'
        ) }}
    {% endcall %}
{% endblock %} 