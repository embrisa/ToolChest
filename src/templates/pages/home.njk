{# src/templates/pages/home.njk #}
{% extends "../layouts/base.njk" %}

{% block title %}{{ super() }} - Welcome{% endblock %}
{% block description %}The homepage of {{ appName }}.{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold mb-6">Welcome to {{ appName }}!</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {# Example: Popular Tools - This would be populated by data from ToolService #}
        {% if popularTools and popularTools.length > 0 %}
            {% for tool in popularTools %}
                <div class="border p-4 rounded-lg shadow hover:shadow-md transition-shadow">
                    <h2 class="text-xl font-semibold mb-2">
                        <a href="/{{ tool.slug }}" class="hover:text-blue-600"><i class="{{ tool.iconClass | default('fas fa-toolbox') }}"></i> {{ tool.name }}</a>
                    </h2>
                    <p class="text-gray-700 text-sm mb-2">{{ tool.description | truncate(100, true) }}</p>
                    {% if tool.tags and tool.tags.length > 0 %}
                        <div class="mt-2">
                            {% for tag in tool.tags %}
                                <span class="inline-block bg-{{ tag.color | default('gray') }}-200 text-{{ tag.color | default('gray') }}-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">{{ tag.name }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        {% else %}
            <p>No tools available at the moment. Check back soon!</p>
        {% endif %}
    </div>

    <div class="mt-8 p-6 bg-blue-50 border border-blue-200 rounded-lg">
        <h2 class="text-2xl font-semibold text-blue-700 mb-3">Explore Our Tools</h2>
        <p class="text-blue-600 mb-4">Discover a variety of utilities designed to simplify your tasks. More tools coming soon!</p>
        {# You can add a link to a tools listing page if you create one #}
        {# <a href="/tools" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition-colors">View All Tools</a> #}
    </div>
{% endblock %} 