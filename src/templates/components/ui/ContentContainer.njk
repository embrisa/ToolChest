{#
  ContentContainer Component
  Purpose: Foundation for all content areas with consistent glass morphism styling
  
  Props:
  - variant: 'light' | 'main' | 'dark' | 'transparent' (default: 'light')
  - padding: 'sm' | 'md' | 'lg' | 'xl' (default: 'md')
  - rounded: boolean (default: true)
  - glass: boolean (default: true)
  - className: string (additional CSS classes)
#}

{% macro ContentContainer(
  variant='light',
  padding='md',
  rounded=true,
  glass=true,
  className='',
  content=''
) %}

{# Set variant-specific styling #}
{% set variantClasses = {
  'light': 'glass-light',
  'main': 'glass-medium', 
  'dark': 'glass-dark',
  'transparent': 'bg-transparent'
} %}

{# Set padding classes #}
{% set paddingClasses = {
  'sm': 'p-4',
  'md': 'p-6',
  'lg': 'p-8',
  'xl': 'p-12'
} %}

{# Set glass morphism CSS variables #}
{% set glassVariables = {
  'light': {
    'bg': 'rgba(254, 247, 237, 0.08)',
    'border': 'rgba(254, 247, 237, 0.08)'
  },
  'main': {
    'bg': 'rgba(254, 247, 237, 0.12)',
    'border': 'rgba(254, 247, 237, 0.15)'
  },
  'dark': {
    'bg': 'rgba(42, 34, 27, 0.6)',
    'border': 'rgba(245, 168, 103, 0.2)'
  }
} %}

{# Build CSS classes as a string #}
{% set allClasses = paddingClasses[padding] %}
{% if glass and variant != 'transparent' %}
  {% set allClasses = allClasses + ' ' + variantClasses[variant] %}
{% endif %}
{% if rounded %}
  {% set allClasses = allClasses + ' rounded-xl' %}
{% endif %}
{% if className %}
  {% set allClasses = allClasses + ' ' + className %}
{% endif %}

{# Build style attribute #}
{% set styleAttr = '' %}
{% if variant != 'transparent' and glass and glassVariables[variant] %}
  {% set vars = glassVariables[variant] %}
  {% set styleAttr = '--glass-bg: ' + vars.bg + '; --glass-border: ' + vars.border + ';' %}
{% endif %}

<div class="{{ allClasses }}"
     {% if styleAttr %}style="{{ styleAttr }}"{% endif %}>
  {% if content %}
    {{ content | safe }}
  {% else %}
    {{ caller() if caller else '' }}
  {% endif %}
</div>

{% endmacro %} 