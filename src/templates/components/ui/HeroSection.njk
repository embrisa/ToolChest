{#
  HeroSection Component
  
  Purpose: Large promotional headers for pages with gradient text and responsive design
  
  Props:
  - title (string, required): Main headline text
  - subtitle (string, optional): Supporting subtitle text
  - gradientColors (array, optional): Custom gradient colors, defaults to sand-100 to apple-blue
  - size ('large' | 'medium', default: 'large'): Hero size variant
  - alignment ('center' | 'left', default: 'center'): Text alignment
  - containerClass (string, optional): Additional CSS classes for container
  
  Usage:
  {{ HeroSection(title='Welcome to tool-chest', subtitle='Your privacy-focused toolkit') }}
  {{ HeroSection(title='Base64 Encoder', size='medium', alignment='left') }}
#}

{% macro HeroSection(title, subtitle='', gradientColors=[], size='large', alignment='center', containerClass='') %}
  {% set baseClasses = 'hero-section' %}
  {% set containerClasses = 'max-w-4xl mx-auto px-6' %}
  {% set textAlignClasses = 'text-center' if alignment == 'center' else 'text-left' %}
  {% set titleSizeClasses = 'text-5xl md:text-6xl lg:text-7xl font-bold' if size == 'large' else 'text-4xl md:text-5xl lg:text-6xl font-bold' %}
  {% set subtitleSizeClasses = 'text-xl md:text-2xl mt-4' if size == 'large' else 'text-lg md:text-xl mt-3' %}
  {% set paddingClasses = 'py-16 md:py-20 lg:py-24' if size == 'large' else 'py-12 md:py-16 lg:py-20' %}
  
  {# Default gradient with fallback color #}
  {% set defaultGradient = 'bg-gradient-to-r from-sand-100 via-sand-200 to-apple-blue bg-clip-text text-transparent' %}
  {% set gradientClass = defaultGradient %}
  
  {# Custom gradient support for future enhancement #}
  {% if gradientColors | length > 0 %}
    {% set gradientClass = 'text-sand-100 bg-gradient-to-r bg-clip-text text-transparent' %}
  {% endif %}

  <section class="{{ baseClasses }} {{ paddingClasses }} {{ containerClass }}">
    <div class="{{ containerClasses }}">
      <div class="{{ textAlignClasses }}">
        <h1 class="{{ titleSizeClasses }} hero-gradient-text hero-title leading-tight">
          {{ title }}
        </h1>
        
        {% if subtitle %}
          <p class="{{ subtitleSizeClasses }} text-neutral-300 leading-relaxed max-w-3xl {{ 'mx-auto' if alignment == 'center' else '' }}">
            {{ subtitle }}
          </p>
        {% endif %}
      </div>
    </div>
  </section>
{% endmacro %}

{#
  HeroWithAction Component
  
  Hero section with call-to-action button
  
  Additional Props:
  - actionText (string): Button text
  - actionHref (string): Button link
  - actionIcon (string, optional): FontAwesome icon class
  - actionVariant (string, default: 'primary'): Button variant
#}

{% macro HeroWithAction(title, subtitle='', actionText='', actionHref='#', actionIcon='', actionVariant='primary', size='large', alignment='center', containerClass='') %}
  {% set baseClasses = 'hero-section' %}
  {% set containerClasses = 'max-w-4xl mx-auto px-6' %}
  {% set textAlignClasses = 'text-center' if alignment == 'center' else 'text-left' %}
  {% set titleSizeClasses = 'text-5xl md:text-6xl lg:text-7xl font-bold' if size == 'large' else 'text-4xl md:text-5xl lg:text-6xl font-bold' %}
  {% set subtitleSizeClasses = 'text-xl md:text-2xl mt-4' if size == 'large' else 'text-lg md:text-xl mt-3' %}
  {% set paddingClasses = 'py-16 md:py-20 lg:py-24' if size == 'large' else 'py-12 md:py-16 lg:py-20' %}
  {% set defaultGradient = 'bg-gradient-to-r from-sand-100 via-sand-200 to-apple-blue bg-clip-text text-transparent' %}

  <section class="{{ baseClasses }} {{ paddingClasses }} {{ containerClass }}">
    <div class="{{ containerClasses }}">
      <div class="{{ textAlignClasses }}">
        <h1 class="{{ titleSizeClasses }} hero-gradient-text hero-title leading-tight">
          {{ title }}
        </h1>
        
        {% if subtitle %}
          <p class="{{ subtitleSizeClasses }} text-neutral-300 leading-relaxed max-w-3xl {{ 'mx-auto' if alignment == 'center' else '' }}">
            {{ subtitle }}
          </p>
        {% endif %}
        
        {% if actionText %}
          <div class="mt-8 {{ 'flex justify-center' if alignment == 'center' else 'flex justify-start' }}">
            {% from 'components/ui/Button.njk' import Button %}
            {{ Button(
              text=actionText,
              href=actionHref,
              variant=actionVariant,
              size='lg',
              icon=actionIcon,
              fullWidth=false
            ) }}
          </div>
        {% endif %}
      </div>
    </div>
  </section>
{% endmacro %}

{#
  ToolHeader Component
  
  Simplified hero for tool pages with icon, title, and description
  
  Props:
  - title (string, required): Tool name
  - description (string, optional): Tool description
  - icon (string, default: 'fas fa-toolbox'): FontAwesome icon class
  - iconVariant (string, default: 'sand'): Icon container variant
#}

{% macro ToolHeader(title, description='', icon='fas fa-toolbox', iconVariant='sand') %}
  <section class="tool-header py-12 md:py-16">
    <div class="max-w-4xl mx-auto px-6 text-center">
      {% from 'components/ui/IconContainer.njk' import IconContainer %}
      
      <div class="mb-6">
        {{ IconContainer(size='2xl', icon=icon, variant=iconVariant) }}
      </div>
      
      <h1 class="text-4xl md:text-5xl font-bold text-sand-100 bg-gradient-to-r from-sand-100 via-sand-200 to-apple-blue bg-clip-text text-transparent hero-title leading-tight">
        {{ title }}
      </h1>
      
      {% if description %}
        <p class="text-lg md:text-xl text-neutral-300 mt-4 max-w-2xl mx-auto leading-relaxed">
          {{ description }}
        </p>
      {% endif %}
    </div>
  </section>
{% endmacro %} 