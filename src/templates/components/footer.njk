{# src/templates/components/footer.njk #}
<footer class="footer-modern border-t border-sand-300/10 mt-auto">
    <div class="max-w-7xl mx-auto px-6 py-12">
        {# Main footer content #}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            {# Brand section #}
            <div class="text-center md:text-left">
                {% from "components/logo.njk" import logo %}
                <div class="mb-4">{{ logo(size="text-3xl", href="/") }}</div>
                <p class="text-neutral-300 text-sm leading-relaxed max-w-xs">
                    Utility tools for common tasks.
                </p>
            </div>
            
            {# Navigation links #}
            <div class="text-center">
                <h4 class="text-sand-200 font-semibold text-sm uppercase tracking-wider mb-4">Links</h4>
                <div class="space-y-2">
                    <a href="/privacy" class="block text-neutral-400 hover:text-sand-300 transition-colors duration-200 text-sm">
                        Privacy Policy
                    </a>
                    <a href="/terms" class="block text-neutral-400 hover:text-sand-300 transition-colors duration-200 text-sm">
                        Terms of Service
                    </a>
                    <a href="/contact" class="block text-neutral-400 hover:text-sand-300 transition-colors duration-200 text-sm">
                        Contact
                    </a>
                </div>
            </div>
            
            {# Social/Info section #}
            <div class="text-center md:text-right">
                <div class="flex justify-center md:justify-end space-x-4">
                    <a href="#" class="w-8 h-8 content-container-button flex items-center justify-center">
                        <i class="fab fa-github text-sand-300 text-sm"></i>
                    </a>
                    <a href="#" class="w-8 h-8 content-container-button flex items-center justify-center">
                        <i class="fab fa-twitter text-sand-300 text-sm"></i>
                    </a>
                </div>
            </div>
        </div>
        
        {# Copyright #}
        <div class="pt-8 border-t border-sand-300/10 text-center">
            <p class="text-neutral-400 text-sm">
                &copy; {{ now() | date("YYYY") }} {{ appName }}. All rights reserved.
            </p>
        </div>
    </div>
</footer> 