{# src/templates/components/error-message.njk #}
{# This template is used for HTMX error responses #}
<div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg border border-red-400" role="alert">
    <span class="font-medium">{{ title | default('Error!') }}</span> {{ message | default('An unexpected error occurred.') }}
    {% if details %}<pre class="mt-2 text-xs whitespace-pre-wrap">{{ details }}</pre>{% endif %}
</div> 