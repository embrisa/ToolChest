{#
  GradientText Utility Component
  Provides beautiful gradient text effects matching the Apple design system
  
  Props:
  - text (string): The text content to display
  - variant (string): 'sand' | 'apple-blue' | 'sunset' | 'neutral' | 'rainbow' | 'custom'
  - customColors (array): Custom gradient colors when variant='custom'
  - size (string): 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl' | '5xl' | '6xl' | '7xl'
  - weight (string): 'light' | 'normal' | 'medium' | 'semibold' | 'bold' | 'extrabold'
  - align (string): 'left' | 'center' | 'right'
  - animated (boolean): Enable gradient animation
  - className (string): Additional CSS classes
  - id (string): Element ID
#}

{%- macro GradientText(text, variant='sand', customColors=[], size='md', weight='normal', align='left', animated=false, className='', id='') -%}
  {%- set variants = {
    'sand': 'bg-gradient-to-r from-sand-100 via-sand-200 to-sand-300',
    'apple-blue': 'bg-gradient-to-r from-apple-blue via-blue-400 to-blue-300',
    'sunset': 'bg-gradient-to-r from-orange-400 via-red-400 to-pink-400',
    'neutral': 'bg-gradient-to-r from-neutral-600 via-neutral-500 to-neutral-400',
    'rainbow': 'bg-gradient-to-r from-red-400 via-yellow-400 via-green-400 via-blue-400 to-purple-400',
    'custom': 'gradient-text-custom'
  } -%}
  
  {%- set sizeClasses = {
    'xs': 'text-xs',
    'sm': 'text-sm',
    'md': 'text-base',
    'lg': 'text-lg',
    'xl': 'text-xl',
    '2xl': 'text-2xl',
    '3xl': 'text-3xl',
    '4xl': 'text-4xl',
    '5xl': 'text-5xl',
    '6xl': 'text-6xl',
    '7xl': 'text-7xl'
  } -%}
  
  {%- set weightClasses = {
    'light': 'font-light',
    'normal': 'font-normal',
    'medium': 'font-medium',
    'semibold': 'font-semibold',
    'bold': 'font-bold',
    'extrabold': 'font-extrabold'
  } -%}
  
  {%- set alignClasses = {
    'left': 'text-left',
    'center': 'text-center',
    'right': 'text-right'
  } -%}

  <span 
    {% if id %}id="{{ id }}"{% endif %}
    class="gradient-text {{ variants[variant] }} bg-clip-text text-transparent {{ sizeClasses[size] }} {{ weightClasses[weight] }} {{ alignClasses[align] }}{% if animated %} gradient-text-animated{% endif %}{% if className %} {{ className }}{% endif %}"
    {% if variant == 'custom' and customColors|length > 0 %}
    style="background: linear-gradient(to right, {{ customColors|join(', ') }}); -webkit-background-clip: text; background-clip: text;"
    {% endif %}
  >
    {{ text }}
  </span>
{%- endmacro -%}

{#
  LargeGradientText - For hero sections and major headings
#}
{%- macro LargeGradientText(text, variant='sand', size='5xl', weight='bold', animated=false, className='') -%}
  {{ GradientText(text, variant, [], size, weight, 'center', animated, className) }}
{%- endmacro -%}

{#
  SmallGradientText - For badges, labels, and subtle text
#}
{%- macro SmallGradientText(text, variant='neutral', size='sm', weight='medium', className='') -%}
  {{ GradientText(text, variant, [], size, weight, 'left', false, className) }}
{%- endmacro -%}

{#
  AnimatedGradientText - With built-in animation
#}
{%- macro AnimatedGradientText(text, variant='rainbow', size='xl', weight='bold', className='') -%}
  {{ GradientText(text, variant, [], size, weight, 'center', true, className) }}
{%- endmacro -%}

{#
  CustomGradientText - With custom color array
#}
{%- macro CustomGradientText(text, colors, size='md', weight='normal', align='left', animated=false, className='') -%}
  {{ GradientText(text, 'custom', colors, size, weight, align, animated, className) }}
{%- endmacro -%}

{#
  GradientHeading - Complete heading component with gradient text
#}
{%- macro GradientHeading(level=1, text, variant='sand', size='auto', weight='bold', align='left', animated=false, className='', id='') -%}
  {%- set autoSizes = {
    1: '4xl',
    2: '3xl', 
    3: '2xl',
    4: 'xl',
    5: 'lg',
    6: 'md'
  } -%}
  
  {%- set actualSize = size if size != 'auto' else autoSizes[level] -%}
  
  <h{{ level }}{% if id %} id="{{ id }}"{% endif %} class="gradient-heading {{ alignClasses[align] }}{% if className %} {{ className }}{% endif %}">
    {{ GradientText(text, variant, [], actualSize, weight, align, animated) }}
  </h{{ level }}>
{%- endmacro -%}

{#
  Usage Examples:

  Basic gradient text:
  {{ GradientText('Beautiful Text', 'sand', [], 'xl', 'bold') }}

  Large hero text:
  {{ LargeGradientText('Welcome to tool-chest', 'sand', '7xl', 'bold', true) }}

  Small badge text:
  {{ SmallGradientText('Premium', 'apple-blue', 'xs', 'semibold') }}

  Animated rainbow text:
  {{ AnimatedGradientText('Loading...', 'rainbow', '2xl', 'bold') }}

  Custom color gradient:
  {{ CustomGradientText('Custom Colors', ['#ff6b6b', '#4ecdc4', '#45b7d1'], 'lg', 'bold') }}

  Gradient heading:
  {{ GradientHeading(1, 'Main Title', 'sunset', '5xl', 'bold', 'center', true) }}
  {{ GradientHeading(2, 'Subtitle', 'apple-blue', 'auto', 'semibold') }}
#} 