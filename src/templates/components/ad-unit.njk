{# src/templates/components/ad-unit.njk #}
{# 
  Ad Unit Component
  Usage: {% include "components/ad-unit.njk" with { format: 'auto', slot: 'your-slot-id', style: 'display:block; text-align:center;' } %}
  
  Parameters:
  - format: ad format (default: 'auto')
  - slot: your AdSense slot ID (required)
  - style: custom CSS styles (optional)
#}

<div class="ad-container my-4">
  <ins class="adsbygoogle"
      style="{{ style | default('display:block;') }}"
      data-ad-client="ca-pub-3517982647276707"
      data-ad-slot="{{ slot }}"
      data-ad-format="{{ format | default('auto') }}"
      data-full-width-responsive="true"></ins>
  <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</div> 