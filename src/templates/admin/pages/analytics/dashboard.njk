{% extends "layouts/admin-layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Analytics Dashboard</h1>
            <p class="text-gray-600 mt-1">Comprehensive usage statistics and insights</p>
        </div>
        <div class="flex space-x-3">
            <button 
                type="button" 
                class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
                hx-get="/admin/analytics/stats"
                hx-target="#overview-stats"
                hx-swap="outerHTML"
            >
                <i class="fas fa-refresh mr-2"></i>Refresh Data
            </button>
            <div class="relative">
                <button 
                    type="button" 
                    class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors"
                    onclick="toggleExportMenu()"
                >
                    <i class="fas fa-download mr-2"></i>Export
                </button>
                <div id="exportMenu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10">
                    <div class="py-1">
                        <a href="/admin/analytics/export?type=overview&format=json" 
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-file-code mr-2"></i>Overview (JSON)
                        </a>
                        <a href="/admin/analytics/export?type=overview&format=csv" 
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-file-csv mr-2"></i>Overview (CSV)
                        </a>
                        <a href="/admin/analytics/export?type=tools&format=json" 
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-tools mr-2"></i>Tools Data (JSON)
                        </a>
                        <a href="/admin/analytics/export?type=tags&format=json" 
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-tags mr-2"></i>Tags Data (JSON)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overview Statistics -->
    <div id="overview-stats">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Total Tools -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-2 bg-blue-100 rounded-lg">
                        <i class="fas fa-tools text-blue-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Total Tools</p>
                        <p class="text-2xl font-bold text-gray-900">{{ metrics.overview.totalTools }}</p>
                        <p class="text-xs text-gray-500">{{ metrics.overview.activeTools }} active</p>
                    </div>
                </div>
            </div>

            <!-- Total Tags -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-2 bg-green-100 rounded-lg">
                        <i class="fas fa-tags text-green-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Total Tags</p>
                        <p class="text-2xl font-bold text-gray-900">{{ metrics.overview.totalTags }}</p>
                        <p class="text-xs text-gray-500">{{ metrics.overview.tagsInUse }} in use</p>
                    </div>
                </div>
            </div>

            <!-- Total Usage -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-2 bg-purple-100 rounded-lg">
                        <i class="fas fa-chart-line text-purple-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Total Usage</p>
                        <p class="text-2xl font-bold text-gray-900">{{ metrics.overview.totalUsage }}</p>
                        <p class="text-xs text-gray-500">{{ metrics.overview.averageUsagePerTool }} avg per tool</p>
                    </div>
                </div>
            </div>

            <!-- Average Tags per Tool -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-2 bg-yellow-100 rounded-lg">
                        <i class="fas fa-sitemap text-yellow-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Avg Tags/Tool</p>
                        <p class="text-2xl font-bold text-gray-900">{{ metrics.overview.averageTagsPerTool }}</p>
                        <p class="text-xs text-gray-500">{{ metrics.overview.toolsWithoutTags }} tools untagged</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Usage Trends Chart -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Usage Trends (30 Days)</h3>
                <button 
                    type="button"
                    class="text-sm text-blue-600 hover:text-blue-800"
                    hx-get="/admin/analytics/date-range?days=30"
                    hx-target="#usage-trends-chart"
                >
                    Refresh
                </button>
            </div>
            <div id="usage-trends-chart" class="h-64">
                {% if metrics.usageTrends.length > 0 %}
                <canvas id="trendsChart" width="400" height="200"></canvas>
                {% else %}
                <div class="flex items-center justify-center h-full text-gray-500">
                    <div class="text-center">
                        <i class="fas fa-chart-line text-4xl mb-2"></i>
                        <p>No usage data available</p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity (7 Days)</h3>
            <div class="space-y-3">
                {% for activity in metrics.recentActivity %}
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                    <div>
                        <p class="text-sm font-medium text-gray-900">{{ activity.date | date('MMM DD') }}</p>
                        <p class="text-xs text-gray-600">{{ activity.uniqueTools }} tools used</p>
                    </div>
                    <div class="text-right">
                        <p class="text-lg font-bold text-blue-600">{{ activity.totalUsage }}</p>
                        <p class="text-xs text-gray-500">total usage</p>
                    </div>
                </div>
                {% else %}
                <div class="text-center text-gray-500 py-8">
                    <i class="fas fa-clock text-3xl mb-2"></i>
                    <p>No recent activity</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Top Tools and Tags -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Top Tools -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Top Tools by Usage</h3>
                <a href="/admin/analytics/tools" class="text-sm text-blue-600 hover:text-blue-800">
                    View All <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="space-y-3">
                {% for tool in metrics.topTools %}
                <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="{{ tool.iconClass or 'fas fa-tools' }} text-gray-600"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900">{{ tool.name }}</p>
                            <div class="flex items-center space-x-2">
                                <p class="text-xs text-gray-500">{{ tool.slug }}</p>
                                {% if tool.isActive %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                        Active
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        Inactive
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-lg font-bold text-blue-600">{{ tool.totalUsage }}</p>
                        <p class="text-xs text-gray-500">uses</p>
                    </div>
                </div>
                {% else %}
                <div class="text-center text-gray-500 py-8">
                    <i class="fas fa-tools text-3xl mb-2"></i>
                    <p>No tool usage data</p>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Top Tags -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Top Tags by Usage</h3>
                <a href="/admin/analytics/tags" class="text-sm text-blue-600 hover:text-blue-800">
                    View All <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="space-y-3">
                {% for tag in metrics.topTags %}
                <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
                    <div class="flex items-center">
                        <span 
                            class="inline-block w-4 h-4 rounded-full"
                            style="background-color: {{ tag.color or '#6B7280' }}"
                        ></span>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900">{{ tag.name }}</p>
                            <p class="text-xs text-gray-500">{{ tag.toolCount }} tools</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-lg font-bold text-purple-600">{{ tag.totalUsage }}</p>
                        <p class="text-xs text-gray-500">total usage</p>
                    </div>
                </div>
                {% else %}
                <div class="text-center text-gray-500 py-8">
                    <i class="fas fa-tags text-3xl mb-2"></i>
                    <p>No tag usage data</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Analytics Actions</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="/admin/analytics/tools" 
               class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                <i class="fas fa-tools text-blue-600 mr-3 text-xl"></i>
                <div>
                    <p class="font-medium text-gray-900">Detailed Tool Analytics</p>
                    <p class="text-sm text-gray-600">Usage trends and patterns</p>
                </div>
            </a>
            <a href="/admin/analytics/tags" 
               class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                <i class="fas fa-tags text-green-600 mr-3 text-xl"></i>
                <div>
                    <p class="font-medium text-gray-900">Tag Performance</p>
                    <p class="text-sm text-gray-600">Tag usage statistics</p>
                </div>
            </a>
            <button 
                type="button"
                class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
                hx-get="/admin/analytics/date-range"
                hx-target="#date-range-modal"
                hx-swap="innerHTML"
                onclick="showDateRangeModal()"
            >
                <i class="fas fa-calendar-alt text-purple-600 mr-3 text-xl"></i>
                <div>
                    <p class="font-medium text-gray-900">Custom Date Range</p>
                    <p class="text-sm text-gray-600">Analyze specific periods</p>
                </div>
            </button>
        </div>
    </div>
</div>

<!-- Date Range Modal -->
<div id="date-range-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 z-50">
    <!-- Modal content will be loaded here -->
</div>

<script>
function toggleExportMenu() {
    const menu = document.getElementById('exportMenu');
    menu.classList.toggle('hidden');
}

function showDateRangeModal() {
    document.getElementById('date-range-modal').classList.remove('hidden');
}

function hideDateRangeModal() {
    document.getElementById('date-range-modal').classList.add('hidden');
}

// Close export menu when clicking outside
document.addEventListener('click', function(event) {
    const menu = document.getElementById('exportMenu');
    const button = event.target.closest('button');
    if (!button || button.onclick !== toggleExportMenu) {
        menu.classList.add('hidden');
    }
});

// Chart.js for usage trends
{% if metrics.usageTrends.length > 0 %}
document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('trendsChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: {{ metrics.usageTrends | map(attribute='date') | list | tojson }},
            datasets: [{
                label: 'Daily Usage',
                data: {{ metrics.usageTrends | map(attribute='usage') | list | tojson }},
                borderColor: 'rgb(59, 130, 246)',
                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                tension: 0.1,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
});
{% endif %}
</script>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
{% endblock %} 