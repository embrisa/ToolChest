{% extends "layouts/admin-layout.njk" %}

{% block content %}
<div class="p-6">
    <!-- Header Section -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-sand-100 mb-2">User Management</h1>
                <p class="text-neutral-400">Manage admin users and their roles</p>
            </div>
            <div class="flex items-center space-x-3">
                <a href="/admin/users/new" 
                   class="bg-sunset-500 hover:bg-sunset-600 text-white px-4 py-2 rounded-lg transition-colors duration-200 font-medium flex items-center">
                    <i class="fas fa-plus mr-2"></i>Add User
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="content-container p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-neutral-400 text-sm">Total Users</p>
                    <p class="text-2xl font-bold text-sand-100">{{ stats.total }}</p>
                </div>
                <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
                    <i class="fas fa-users text-blue-400 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="content-container p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-neutral-400 text-sm">Active Users</p>
                    <p class="text-2xl font-bold text-green-400">{{ stats.active }}</p>
                </div>
                <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
                    <i class="fas fa-user-check text-green-400 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="content-container p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-neutral-400 text-sm">Super Admins</p>
                    <p class="text-2xl font-bold text-sunset-400">{{ stats.byRole.SUPER_ADMIN }}</p>
                </div>
                <div class="w-12 h-12 bg-sunset-500/20 rounded-lg flex items-center justify-center">
                    <i class="fas fa-crown text-sunset-400 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="content-container p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-neutral-400 text-sm">Inactive Users</p>
                    <p class="text-2xl font-bold text-red-400">{{ stats.inactive }}</p>
                </div>
                <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center">
                    <i class="fas fa-user-times text-red-400 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="content-container p-6 mb-6">
        <form hx-get="/admin/users" hx-target="#users-list" hx-trigger="input delay:300ms, change, submit">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label for="search" class="block text-sm font-medium text-neutral-300 mb-2">Search</label>
                    <input type="text" id="search" name="search" value="{{ filters.search or '' }}" 
                           placeholder="Search users..."
                           class="w-full px-3 py-2 bg-dark-700/50 border border-neutral-600/30 rounded-lg text-sand-100 
                                  placeholder-neutral-500 focus:border-ocean-400 focus:ring-2 focus:ring-ocean-400/20 
                                  transition-colors duration-200">
                </div>
                
                <div>
                    <label for="role" class="block text-sm font-medium text-neutral-300 mb-2">Role</label>
                    <select id="role" name="role" 
                            class="w-full px-3 py-2 bg-dark-700/50 border border-neutral-600/30 rounded-lg text-sand-100 
                                   focus:border-ocean-400 focus:ring-2 focus:ring-ocean-400/20 transition-colors duration-200">
                        <option value="">All Roles</option>
                        {% for role in roles %}
                        <option value="{{ role }}" {% if filters.role == role %}selected{% endif %}>{{ role.replace('_', ' ') | title }}</option>
                        {% endfor %}
                    </select>
                </div>
                
                <div>
                    <label for="isActive" class="block text-sm font-medium text-neutral-300 mb-2">Status</label>
                    <select id="isActive" name="isActive" 
                            class="w-full px-3 py-2 bg-dark-700/50 border border-neutral-600/30 rounded-lg text-sand-100 
                                   focus:border-ocean-400 focus:ring-2 focus:ring-ocean-400/20 transition-colors duration-200">
                        <option value="">All Statuses</option>
                        <option value="true" {% if filters.isActive == true %}selected{% endif %}>Active</option>
                        <option value="false" {% if filters.isActive == false %}selected{% endif %}>Inactive</option>
                    </select>
                </div>
            </div>
        </form>
    </div>

    <!-- Users List -->
    <div id="users-list">
        <div class="content-container">
            {% if users.length > 0 %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-neutral-700/50">
                            <th class="text-left py-4 px-6 text-neutral-300 font-medium">User</th>
                            <th class="text-left py-4 px-6 text-neutral-300 font-medium">Role</th>
                            <th class="text-left py-4 px-6 text-neutral-300 font-medium">Status</th>
                            <th class="text-left py-4 px-6 text-neutral-300 font-medium">Last Login</th>
                            <th class="text-left py-4 px-6 text-neutral-300 font-medium">Created</th>
                            <th class="text-right py-4 px-6 text-neutral-300 font-medium">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr class="border-b border-neutral-700/30 hover:bg-dark-700/30 transition-colors duration-200">
                            <td class="py-4 px-6">
                                <div>
                                    <div class="font-medium text-sand-100">{{ user.username }}</div>
                                    <div class="text-sm text-neutral-400">{{ user.email }}</div>
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    {% if user.role == 'SUPER_ADMIN' %}bg-sunset-500/20 text-sunset-300
                                    {% elif user.role == 'ADMIN' %}bg-blue-500/20 text-blue-300
                                    {% else %}bg-gray-500/20 text-gray-300{% endif %}">
                                    {% if user.role == 'SUPER_ADMIN' %}<i class="fas fa-crown mr-1"></i>{% endif %}
                                    {{ user.role.replace('_', ' ') | title }}
                                </span>
                            </td>
                            <td class="py-4 px-6">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    {% if user.isActive %}bg-green-500/20 text-green-300{% else %}bg-red-500/20 text-red-300{% endif %}">
                                    <i class="fas fa-circle mr-1 text-xs"></i>
                                    {% if user.isActive %}Active{% else %}Inactive{% endif %}
                                </span>
                            </td>
                            <td class="py-4 px-6 text-neutral-300">
                                {% if user.lastLoginAt %}
                                    {{ user.lastLoginAt | date('MMM d, yyyy HH:mm') }}
                                {% else %}
                                    <span class="text-neutral-500">Never</span>
                                {% endif %}
                            </td>
                            <td class="py-4 px-6 text-neutral-300">
                                {{ user.createdAt | date('MMM d, yyyy') }}
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex items-center justify-end space-x-2">
                                    <a href="/admin/users/{{ user.id }}" 
                                       class="text-ocean-400 hover:text-ocean-300 transition-colors duration-200"
                                       title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/admin/users/{{ user.id }}/edit" 
                                       class="text-sand-400 hover:text-sand-300 transition-colors duration-200"
                                       title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {% if user.id != adminUser.id %}
                                    <button hx-post="/admin/users/{{ user.id }}/toggle"
                                            hx-confirm="Are you sure you want to {% if user.isActive %}deactivate{% else %}activate{% endif %} this user?"
                                            class="{% if user.isActive %}text-red-400 hover:text-red-300{% else %}text-green-400 hover:text-green-300{% endif %} transition-colors duration-200"
                                            title="{% if user.isActive %}Deactivate{% else %}Activate{% endif %} User">
                                        <i class="fas fa-{% if user.isActive %}user-times{% else %}user-check{% endif %}"></i>
                                    </button>
                                    <button hx-delete="/admin/users/{{ user.id }}"
                                            hx-confirm="Are you sure you want to delete this user? This action cannot be undone."
                                            class="text-red-400 hover:text-red-300 transition-colors duration-200"
                                            title="Delete User">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if pagination.total > 1 %}
            <div class="flex items-center justify-between px-6 py-4 border-t border-neutral-700/50">
                <div class="text-sm text-neutral-400">
                    Showing {{ ((pagination.current - 1) * pagination.limit) + 1 }} to 
                    {{ pagination.current * pagination.limit | min(pagination.totalItems) }} of 
                    {{ pagination.totalItems }} users
                </div>
                <div class="flex space-x-1">
                    {% if pagination.current > 1 %}
                    <a href="/admin/users?page={{ pagination.current - 1 }}&search={{ filters.search or '' }}&role={{ filters.role or '' }}&isActive={{ filters.isActive or '' }}"
                       class="px-3 py-2 text-neutral-400 hover:text-sand-300 hover:bg-dark-700/50 rounded-lg transition-colors duration-200">
                        Previous
                    </a>
                    {% endif %}
                    
                    {% for page in range(1, pagination.total + 1) %}
                        {% if page == pagination.current %}
                        <span class="px-3 py-2 bg-ocean-600 text-white rounded-lg font-medium">{{ page }}</span>
                        {% elif page <= 3 or page > pagination.total - 3 or (page >= pagination.current - 1 and page <= pagination.current + 1) %}
                        <a href="/admin/users?page={{ page }}&search={{ filters.search or '' }}&role={{ filters.role or '' }}&isActive={{ filters.isActive or '' }}"
                           class="px-3 py-2 text-neutral-400 hover:text-sand-300 hover:bg-dark-700/50 rounded-lg transition-colors duration-200">
                            {{ page }}
                        </a>
                        {% elif page == 4 and pagination.current > 5 %}
                        <span class="px-3 py-2 text-neutral-500">...</span>
                        {% elif page == pagination.total - 3 and pagination.current < pagination.total - 4 %}
                        <span class="px-3 py-2 text-neutral-500">...</span>
                        {% endif %}
                    {% endfor %}
                    
                    {% if pagination.current < pagination.total %}
                    <a href="/admin/users?page={{ pagination.current + 1 }}&search={{ filters.search or '' }}&role={{ filters.role or '' }}&isActive={{ filters.isActive or '' }}"
                       class="px-3 py-2 text-neutral-400 hover:text-sand-300 hover:bg-dark-700/50 rounded-lg transition-colors duration-200">
                        Next
                    </a>
                    {% endif %}
                </div>
            </div>
            {% endif %}
            {% else %}
            <div class="text-center py-12">
                <i class="fas fa-users text-neutral-600 text-6xl mb-4"></i>
                <h3 class="text-xl font-medium text-neutral-400 mb-2">No users found</h3>
                <p class="text-neutral-500 mb-6">No users match your search criteria.</p>
                <a href="/admin/users/new" 
                   class="bg-sunset-500 hover:bg-sunset-600 text-white px-6 py-3 rounded-lg transition-colors duration-200 font-medium inline-flex items-center">
                    <i class="fas fa-plus mr-2"></i>Create First User
                </a>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<div id="error-container"></div>
<div id="success-container"></div>
{% endblock %} 