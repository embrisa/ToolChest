{% extends "layouts/admin-layout.njk" %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-white">Tags Management</h1>
            <p class="text-ocean-100">Manage all tags in the system</p>
        </div>
        <a href="/admin/tags/new" 
           class="btn-primary flex items-center">
            <i class="fas fa-plus mr-2"></i>Add New Tag
        </a>
    </div>

    <!-- Filters -->
    <div class="content-container">
        <form method="GET" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-64">
                <label for="search" class="admin-form-label">Search</label>
                <input type="text" 
                       id="search" 
                       name="search" 
                       value="{{ filters.search or '' }}"
                       placeholder="Search by name, description, or slug..."
                       class="admin-form-input">
            </div>
            <div class="flex gap-2">
                <button type="submit" 
                        class="admin-btn-secondary">
                    <i class="fas fa-search mr-2"></i>Filter
                </button>
                <a href="/admin/tags" 
                   class="admin-btn-secondary opacity-70 hover:opacity-100">
                    Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Error container for HTMX -->
    <div id="error-container"></div>

    <!-- Tags Grid -->
    <div class="content-container">
        {% if tags.length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {% for tag in tags %}
            <div class="tool-card p-4 hover:scale-105 transition-transform">
                <div class="flex items-center justify-between mb-3">
                    <div class="flex items-center">
                        <div class="w-4 h-4 rounded-full mr-3" style="background-color: {{ tag.color }};"></div>
                        <h3 class="text-lg font-medium text-white truncate">{{ tag.name }}</h3>
                    </div>
                    <div class="flex items-center space-x-1">
                        <a href="/admin/tags/{{ tag.id }}" 
                           class="text-ocean-400 hover:text-white transition-colors" 
                           title="View Details">
                            <i class="fas fa-eye text-sm"></i>
                        </a>
                        <a href="/admin/tags/{{ tag.id }}/edit" 
                           class="text-sand-300 hover:text-white transition-colors" 
                           title="Edit">
                            <i class="fas fa-edit text-sm"></i>
                        </a>
                        <form method="POST" 
                              action="/admin/tags/{{ tag.id }}" 
                              class="inline"
                              hx-delete="/admin/tags/{{ tag.id }}"
                              hx-confirm="Are you sure you want to delete this tag? This action cannot be undone.">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" 
                                    class="text-danger hover:text-white transition-colors" 
                                    title="Delete">
                                <i class="fas fa-trash text-sm"></i>
                            </button>
                        </form>
                    </div>
                </div>
                
                <div class="text-sm text-ocean-100/60 mb-2">{{ tag.slug }}</div>
                
                {% if tag.description %}
                <p class="text-sm text-ocean-100 mb-3 line-clamp-2">{{ tag.description }}</p>
                {% else %}
                <p class="text-sm text-ocean-100/50 mb-3 italic">No description</p>
                {% endif %}
                
                <div class="flex items-center justify-between text-sm">
                    <span class="text-ocean-100/70">
                        <i class="fas fa-tools mr-1"></i>
                        {{ tag.toolCount or 0 }} tool{{ 's' if tag.toolCount != 1 else '' }}
                    </span>
                    <span class="text-xs text-ocean-100/50">
                        {{ tag.createdAt | date('MMM DD, YYYY') }}
                    </span>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-12 text-ocean-100/60">
            <i class="fas fa-tags text-4xl mb-4 text-ocean-400/50"></i>
            <div class="text-lg font-medium">No tags found</div>
            <div class="text-sm">
                {% if filters.search %}
                Try adjusting your search or <a href="/admin/tags" class="text-sand-300 hover:text-white transition-colors">clear the filter</a>.
                {% else %}
                <a href="/admin/tags/new" class="text-sand-300 hover:text-white transition-colors">Create your first tag</a> to get started.
                {% endif %}
            </div>
        </div>
        {% endif %}

        <!-- Pagination -->
        {% if pagination.total > 1 %}
        <div class="px-4 py-3 flex items-center justify-between border-t border-ocean-400/10 sm:px-6 mt-6">
            <div class="flex-1 flex justify-between sm:hidden">
                {% if pagination.current > 1 %}
                <a href="?page={{ pagination.current - 1 }}{% if filters.search %}&search={{ filters.search }}{% endif %}" 
                   class="admin-btn-secondary">
                    Previous
                </a>
                {% endif %}
                {% if pagination.current < pagination.total %}
                <a href="?page={{ pagination.current + 1 }}{% if filters.search %}&search={{ filters.search }}{% endif %}" 
                   class="admin-btn-secondary">
                    Next
                </a>
                {% endif %}
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-ocean-100">
                        Showing page <span class="font-medium text-white">{{ pagination.current }}</span> of <span class="font-medium text-white">{{ pagination.total }}</span>
                        ({{ pagination.totalItems }} total tags)
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                        {% if pagination.current > 1 %}
                        <a href="?page={{ pagination.current - 1 }}{% if filters.search %}&search={{ filters.search }}{% endif %}" 
                           class="admin-btn-secondary rounded-l-md">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                        {% endif %}
                        
                        {% for page in range(1, pagination.total + 1) %}
                        {% if page == pagination.current %}
                        <span class="btn-primary border-ocean-400 relative inline-flex items-center px-4 py-2 text-sm font-medium">
                            {{ page }}
                        </span>
                        {% elif page <= 3 or page >= pagination.total - 2 or (page >= pagination.current - 1 and page <= pagination.current + 1) %}
                        <a href="?page={{ page }}{% if filters.search %}&search={{ filters.search }}{% endif %}" 
                           class="admin-btn-secondary">
                            {{ page }}
                        </a>
                        {% elif page == 4 and pagination.current > 5 %}
                        <span class="admin-btn-secondary opacity-50">
                            ...
                        </span>
                        {% elif page == pagination.total - 3 and pagination.current < pagination.total - 4 %}
                        <span class="admin-btn-secondary opacity-50">
                            ...
                        </span>
                        {% endif %}
                        {% endfor %}
                        
                        {% if pagination.current < pagination.total %}
                        <a href="?page={{ pagination.current + 1 }}{% if filters.search %}&search={{ filters.search }}{% endif %}" 
                           class="admin-btn-secondary rounded-r-md">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %} 