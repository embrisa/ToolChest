{% extends "layouts/admin-layout.njk" %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">
                {% if isEdit %}Edit Tag{% else %}Create New Tag{% endif %}
            </h1>
            <p class="text-gray-600">
                {% if isEdit %}Update the tag information{% else %}Add a new tag to categorize tools{% endif %}
            </p>
        </div>
        <a href="/admin/tags" 
           class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>Back to Tags
        </a>
    </div>

    <!-- Error container for HTMX -->
    <div id="error-container"></div>

    <!-- Form -->
    <div class="bg-white rounded-lg shadow">
        <form method="POST" 
              action="{{ action }}" 
              class="p-6 space-y-6"
              {% if isEdit %}hx-put="{{ action }}"{% else %}hx-post="{{ action }}"{% endif %}
              hx-target="#error-container">
            
            {% if isEdit %}
            <input type="hidden" name="_method" value="PUT">
            {% endif %}

            <!-- Basic Information -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                        Tag Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                           id="name" 
                           name="name" 
                           value="{{ tag.name if tag else '' }}"
                           required
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Enter tag name">
                    <p class="text-xs text-gray-500 mt-1">The display name for the tag</p>
                </div>

                <div>
                    <label for="slug" class="block text-sm font-medium text-gray-700 mb-1">
                        Slug
                    </label>
                    <input type="text" 
                           id="slug" 
                           name="slug" 
                           value="{{ tag.slug if tag else '' }}"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Auto-generated from name">
                    <p class="text-xs text-gray-500 mt-1">URL-friendly identifier (leave blank to auto-generate)</p>
                </div>
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
                    Description
                </label>
                <textarea id="description" 
                          name="description" 
                          rows="3"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                          placeholder="Describe what this tag represents">{{ tag.description if tag else '' }}</textarea>
                <p class="text-xs text-gray-500 mt-1">Brief description of what tools this tag categorizes</p>
            </div>

            <!-- Color Selection -->
            <div>
                <label for="color" class="block text-sm font-medium text-gray-700 mb-3">
                    Tag Color
                </label>
                <div class="flex items-center space-x-4">
                    <input type="color" 
                           id="color" 
                           name="color" 
                           value="{{ tag.color if tag else '#3B82F6' }}"
                           class="h-10 w-20 border border-gray-300 rounded-md cursor-pointer">
                    <div class="flex-1">
                        <input type="text" 
                               id="colorHex" 
                               value="{{ tag.color if tag else '#3B82F6' }}"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 font-mono"
                               placeholder="#3B82F6">
                        <p class="text-xs text-gray-500 mt-1">Hex color code for the tag</p>
                    </div>
                </div>
                
                <!-- Predefined Colors -->
                <div class="mt-3">
                    <p class="text-sm font-medium text-gray-700 mb-2">Quick Colors:</p>
                    <div class="flex flex-wrap gap-2">
                        {% set predefinedColors = [
                            '#3B82F6', '#EF4444', '#10B981', '#F59E0B', 
                            '#8B5CF6', '#EC4899', '#06B6D4', '#84CC16',
                            '#F97316', '#6366F1', '#14B8A6', '#F43F5E'
                        ] %}
                        {% for presetColor in predefinedColors %}
                        <button type="button" 
                                class="w-8 h-8 rounded-full border-2 border-gray-300 hover:border-gray-400 transition-colors color-preset"
                                style="background-color: {{ presetColor }};"
                                data-color="{{ presetColor }}"
                                title="{{ presetColor }}">
                        </button>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Preview -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-3">Preview</label>
                <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
                    <div id="tagPreview" class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium"
                         style="background-color: {{ tag.color if tag else '#3B82F6' }}20; color: {{ tag.color if tag else '#3B82F6' }};">
                        <div class="w-2 h-2 rounded-full mr-2" style="background-color: {{ tag.color if tag else '#3B82F6' }};"></div>
                        <span id="previewName">{{ tag.name if tag else 'Tag Name' }}</span>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
                <a href="/admin/tags" 
                   class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                    Cancel
                </a>
                <button type="submit" 
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md font-medium transition-colors">
                    <i class="fas fa-save mr-2"></i>
                    {% if isEdit %}Update Tag{% else %}Create Tag{% endif %}
                </button>
            </div>
        </form>
    </div>

    <!-- Usage Information (only for edit) -->
    {% if isEdit and tag %}
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Tag Usage</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900">{{ tag.toolCount or 0 }}</div>
                <div class="text-sm text-gray-500">Tools using this tag</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900">{{ tag.createdAt | date('MMM DD') }}</div>
                <div class="text-sm text-gray-500">Created</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900">{{ tag.slug }}</div>
                <div class="text-sm text-gray-500">Slug</div>
            </div>
        </div>
        {% if tag.toolCount > 0 %}
        <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-md">
            <div class="flex">
                <i class="fas fa-info-circle text-blue-400 mt-0.5"></i>
                <div class="ml-3">
                    <p class="text-sm text-blue-800">
                        This tag is currently being used by {{ tag.toolCount }} tool{{ 's' if tag.toolCount != 1 else '' }}. 
                        Changes to the tag will be reflected on all associated tools.
                    </p>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
    {% endif %}
</div>

<script>
// Auto-generate slug from name if slug field is empty
document.getElementById('name').addEventListener('input', function() {
    const slugField = document.getElementById('slug');
    const previewName = document.getElementById('previewName');
    
    // Update preview
    previewName.textContent = this.value || 'Tag Name';
    
    // Update slug if auto-generated
    if (!slugField.value || slugField.dataset.autoGenerated === 'true') {
        const slug = this.value
            .toLowerCase()
            .replace(/[^a-z0-9]+/g, '-')
            .replace(/^-+|-+$/g, '');
        slugField.value = slug;
        slugField.dataset.autoGenerated = 'true';
    }
});

// Mark slug as manually edited if user types in it
document.getElementById('slug').addEventListener('input', function() {
    this.dataset.autoGenerated = 'false';
});

// Color picker functionality
const colorInput = document.getElementById('color');
const colorHexInput = document.getElementById('colorHex');
const tagPreview = document.getElementById('tagPreview');
const previewDot = tagPreview.querySelector('.w-2');

function updatePreviewColor(color) {
    tagPreview.style.backgroundColor = color + '20';
    tagPreview.style.color = color;
    previewDot.style.backgroundColor = color;
    colorInput.value = color;
    colorHexInput.value = color;
}

// Sync color picker with hex input
colorInput.addEventListener('input', function() {
    updatePreviewColor(this.value);
});

colorHexInput.addEventListener('input', function() {
    const color = this.value;
    if (/^#[0-9A-F]{6}$/i.test(color)) {
        updatePreviewColor(color);
    }
});

// Preset color buttons
document.querySelectorAll('.color-preset').forEach(button => {
    button.addEventListener('click', function() {
        const color = this.dataset.color;
        updatePreviewColor(color);
    });
});
</script>
{% endblock %} 