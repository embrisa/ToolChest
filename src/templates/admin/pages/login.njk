{# src/templates/admin/pages/login.njk #}
{% extends "layouts/admin-auth-layout.njk" %}

{% block content %}
<div class="content-container">
    <h2 class="text-2xl font-bold text-center text-white mb-6">Sign in to Admin</h2>
    
    {% if error %}
    <div class="mb-4 p-3 rounded-lg border" style="background-color: rgba(255, 77, 79, 0.1); border-color: var(--danger); color: var(--danger);">
        {{ error }}
    </div>
    {% endif %}

    <div id="login-error" class="mb-4"></div>

    <form hx-post="/admin/auth/login" hx-target="#login-error" hx-swap="innerHTML" hx-indicator="#login-loading" class="space-y-6">
        <div>
            <label for="username" class="block text-sm font-medium text-ocean-100 mb-2">Username</label>
            <input 
                type="text" 
                id="username" 
                name="username" 
                required 
                class="w-full px-4 py-3 rounded-lg border border-ocean-400/20 bg-navy-800/50 backdrop-blur-sm text-white placeholder-ocean-100/60 focus:outline-none focus:ring-2 focus:ring-ocean-400 focus:border-transparent transition-all"
                placeholder="Enter your username"
                oninput="clearLoginError()"
            >
        </div>

        <div>
            <label for="password" class="block text-sm font-medium text-ocean-100 mb-2">Password</label>
            <input 
                type="password" 
                id="password" 
                name="password" 
                required 
                class="w-full px-4 py-3 rounded-lg border border-ocean-400/20 bg-navy-800/50 backdrop-blur-sm text-white placeholder-ocean-100/60 focus:outline-none focus:ring-2 focus:ring-ocean-400 focus:border-transparent transition-all"
                placeholder="Enter your password"
                oninput="clearLoginError()"
            >
        </div>

        <div>
            <button 
                type="submit" 
                class="w-full btn-primary flex justify-center items-center py-3 px-4 text-white font-medium rounded-lg transition-all"
            >
                <i class="fas fa-sign-in-alt mr-2"></i>
                <span class="htmx-indicator" id="login-loading">
                    <i class="fas fa-spinner fa-spin mr-2"></i>
                </span>
                <span id="login-text">Sign In</span>
            </button>
        </div>
    </form>
</div>

<script>
function clearLoginError() {
    const errorDiv = document.getElementById('login-error');
    if (errorDiv && errorDiv.innerHTML.trim() !== '') {
        errorDiv.innerHTML = '';
    }
}
</script>
{% endblock %} 