{# src/templates/admin/pages/login.njk #}
{% extends "layouts/admin-auth-layout.njk" %}

{% block content %}
<div class="content-container-main">
    <h2 class="text-2xl font-bold text-center text-sand-100 mb-6">Sign in to Admin</h2>
    
    {% if error %}
    <div class="mb-4 p-3 rounded-lg border" style="background-color: rgba(255, 69, 58, 0.1); border-color: var(--error); color: var(--error);">
        {{ error }}
    </div>
    {% endif %}

    <div id="login-error" class="mb-4"></div>

    <form hx-post="/admin/auth/login" hx-target="#login-error" hx-swap="innerHTML" hx-indicator="#login-loading" class="space-y-6">
        <div>
            <label for="username" class="block text-sm font-medium text-sand-200 mb-2">Username</label>
            <input 
                type="text" 
                id="username" 
                name="username" 
                required 
                class="form-input"
                placeholder="Enter your username"
                oninput="clearLoginError()"
            >
        </div>

        <div>
            <label for="password" class="block text-sm font-medium text-sand-200 mb-2">Password</label>
            <input 
                type="password" 
                id="password" 
                name="password" 
                required 
                class="form-input"
                placeholder="Enter your password"
                oninput="clearLoginError()"
            >
        </div>

        <div class="flex items-center">
            <input 
                type="checkbox" 
                id="rememberMe" 
                name="rememberMe" 
                value="true"
                class="h-4 w-4 text-primary bg-gray-100 border-gray-300 rounded focus:ring-primary focus:ring-2"
            >
            <label for="rememberMe" class="ml-2 block text-sm text-sand-200">
                Remember me for 30 days
            </label>
        </div>

        <div>
            <button 
                type="submit" 
                class="w-full btn btn-primary flex justify-center items-center py-3 px-4 font-medium rounded-lg transition-all"
            >
                <i class="fas fa-sign-in-alt mr-2"></i>
                <span class="htmx-indicator" id="login-loading">
                    <i class="fas fa-spinner fa-spin mr-2"></i>
                </span>
                <span id="login-text">Sign In</span>
            </button>
        </div>
    </form>
</div>

<script>
function clearLoginError() {
    const errorDiv = document.getElementById('login-error');
    if (errorDiv && errorDiv.innerHTML.trim() !== '') {
        errorDiv.innerHTML = '';
    }
}
</script>
{% endblock %} 