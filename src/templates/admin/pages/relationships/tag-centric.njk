{% extends "layouts/admin-layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">{{ title }}</h1>
            <p class="text-gray-600 mt-1">Manage tools assigned to {{ tagRelationships.tagName }}</p>
        </div>
        <div class="flex space-x-3">
            <a href="/admin/relationships" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>Back to Matrix
            </a>
            <a href="/admin/tags/{{ tagRelationships.tagId }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                <i class="fas fa-eye mr-2"></i>View Tag
            </a>
        </div>
    </div>

    <!-- Tag Info Card -->
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <span 
                    class="inline-block w-8 h-8 rounded-full"
                    style="background-color: {{ tagRelationships.tagColor or '#6B7280' }}"
                ></span>
            </div>
            <div class="ml-4">
                <h2 class="text-xl font-semibold text-gray-900">{{ tagRelationships.tagName }}</h2>
                <p class="text-gray-600">{{ tagRelationships.tagSlug }}</p>
            </div>
        </div>
    </div>

    <!-- Tools Management -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Tool Assignments</h2>
            <p class="text-sm text-gray-600 mt-1">Toggle tools on/off for this tag</p>
        </div>
        
        {% if tagRelationships.tools.length > 0 %}
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for tool in tagRelationships.tools %}
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-3">
                            <div class="flex-shrink-0">
                                <i class="fas fa-wrench text-gray-400"></i>
                            </div>
                            <div>
                                <h3 class="text-sm font-medium text-gray-900">{{ tool.name }}</h3>
                                <div class="flex items-center space-x-2 mt-1">
                                    <p class="text-xs text-gray-500">{{ tool.slug }}</p>
                                    {% if tool.isActive %}
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                            Active
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                            Inactive
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center">
                            {% if tool.isAssigned %}
                            <button 
                                class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-xs font-medium hover:bg-red-200 transition-colors"
                                hx-post="/admin/relationships/unassign"
                                hx-vals='{"toolId": "{{ tool.id }}", "tagId": "{{ tagRelationships.tagId }}"}'
                                hx-target="#message-area"
                                hx-swap="innerHTML"
                                hx-confirm="Remove {{ tool.name }} from {{ tagRelationships.tagName }}?"
                            >
                                <i class="fas fa-minus mr-1"></i>Remove
                            </button>
                            {% else %}
                            <button 
                                class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-medium hover:bg-green-200 transition-colors"
                                hx-post="/admin/relationships/assign"
                                hx-vals='{"toolId": "{{ tool.id }}", "tagId": "{{ tagRelationships.tagId }}"}'
                                hx-target="#message-area"
                                hx-swap="innerHTML"
                            >
                                <i class="fas fa-plus mr-1"></i>Assign
                            </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
        <div class="px-6 py-12 text-center">
            <i class="fas fa-tools text-gray-400 text-4xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Tools Available</h3>
            <p class="text-gray-600 mb-4">Create some tools first to assign them to tags.</p>
            <a href="/admin/tools/new" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                Create Tool
            </a>
        </div>
        {% endif %}
    </div>

    <!-- Message Area -->
    <div id="message-area" class="hidden"></div>

    <!-- Quick Stats -->
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Stats</h3>
        <div class="grid grid-cols-3 gap-4">
            <div class="text-center">
                <div class="text-2xl font-bold text-blue-600">
                    {{ tagRelationships.tools | selectattr('isAssigned') | list | length }}
                </div>
                <div class="text-sm text-gray-600">Assigned Tools</div>
            </div>
            <div class="text-center">
                <div class="text-2xl font-bold text-gray-600">
                    {{ tagRelationships.tools | rejectattr('isAssigned') | list | length }}
                </div>
                <div class="text-sm text-gray-600">Available Tools</div>
            </div>
            <div class="text-center">
                <div class="text-2xl font-bold text-green-600">
                    {{ tagRelationships.tools | selectattr('isAssigned') | selectattr('isActive') | list | length }}
                </div>
                <div class="text-sm text-gray-600">Active Assigned</div>
            </div>
        </div>
    </div>
</div>

<script>
// Handle HTMX responses
document.addEventListener('htmx:afterRequest', function(event) {
    if (event.detail.target.id === 'message-area') {
        // Show message briefly
        const messageEl = document.getElementById('message-area');
        messageEl.classList.remove('hidden');
        setTimeout(() => {
            messageEl.classList.add('hidden');
        }, 3000);
        
        // Refresh the page to update the assignments
        setTimeout(() => {
            window.location.reload();
        }, 1000);
    }
});
</script>
{% endblock %} 