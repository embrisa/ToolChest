{% extends "layouts/admin-layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold" style="color: var(--sand-100);">Tool-Tag Relationships</h1>
            <p class="mt-2" style="color: var(--neutral-400);">Manage which tags are assigned to each tool</p>
        </div>
        <div class="flex space-x-3">
            <button 
                type="button" 
                class="content-container px-6 py-3 rounded-xl transition-all duration-200 hover:scale-105 border"
                style="background: linear-gradient(135deg, var(--sand-400) 0%, var(--sand-500) 100%); 
                       color: white; 
                       border-color: rgba(255, 255, 255, 0.1);
                       box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 
                                   0 4px 12px rgba(0, 0, 0, 0.15);"
                onclick="showBulkAssignModal()"
            >
                <i class="fas fa-plus mr-2"></i>Bulk Assign
            </button>
            <button 
                type="button" 
                class="content-container px-6 py-3 rounded-xl transition-all duration-200 hover:scale-105 border"
                style="background: linear-gradient(135deg, var(--sunset-500) 0%, var(--sunset-600) 100%); 
                       color: white; 
                       border-color: rgba(255, 255, 255, 0.1);
                       box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 
                                   0 4px 12px rgba(0, 0, 0, 0.15);"
                onclick="showBulkUnassignModal()"
            >
                <i class="fas fa-minus mr-2"></i>Bulk Unassign
            </button>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="content-container p-6 rounded-xl border"
             style="background: rgba(254, 247, 237, 0.1); 
                    border-color: rgba(254, 247, 237, 0.08);
                    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05), 
                                0 8px 32px rgba(0, 0, 0, 0.1);">
            <div class="flex items-center">
                <div class="p-3 rounded-xl" style="background: rgba(51, 141, 255, 0.1);">
                    <i class="fas fa-link" style="color: var(--blue-400);"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium" style="color: var(--neutral-400);">Total Relationships</p>
                    <p class="text-2xl font-bold" style="color: var(--sand-100);">{{ stats.totalRelationships }}</p>
                </div>
            </div>
        </div>
        <div class="content-container p-6 rounded-xl border"
             style="background: rgba(254, 247, 237, 0.1); 
                    border-color: rgba(254, 247, 237, 0.08);
                    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05), 
                                0 8px 32px rgba(0, 0, 0, 0.1);">
            <div class="flex items-center">
                <div class="p-3 rounded-xl" style="background: rgba(245, 168, 103, 0.2);">
                    <i class="fas fa-tools" style="color: var(--sand-400);"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium" style="color: var(--neutral-400);">Tools with Tags</p>
                    <p class="text-2xl font-bold" style="color: var(--sand-100);">{{ stats.toolsWithTags }}</p>
                </div>
            </div>
        </div>
        <div class="content-container p-6 rounded-xl border"
             style="background: rgba(254, 247, 237, 0.1); 
                    border-color: rgba(254, 247, 237, 0.08);
                    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05), 
                                0 8px 32px rgba(0, 0, 0, 0.1);">
            <div class="flex items-center">
                <div class="p-3 rounded-xl" style="background: rgba(255, 140, 66, 0.15);">
                    <i class="fas fa-tags" style="color: var(--sunset-400);"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium" style="color: var(--neutral-400);">Tags in Use</p>
                    <p class="text-2xl font-bold" style="color: var(--sand-100);">{{ stats.tagsInUse }}</p>
                </div>
            </div>
        </div>
        <div class="content-container p-6 rounded-xl border"
             style="background: rgba(254, 247, 237, 0.1); 
                    border-color: rgba(254, 247, 237, 0.08);
                    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05), 
                                0 8px 32px rgba(0, 0, 0, 0.1);">
            <div class="flex items-center">
                <div class="p-3 rounded-xl" style="background: rgba(252, 211, 77, 0.15);">
                    <i class="fas fa-chart-bar" style="color: var(--sand-300);"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium" style="color: var(--neutral-400);">Avg Tags/Tool</p>
                    <p class="text-2xl font-bold" style="color: var(--sand-100);">{{ stats.averageTagsPerTool }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Relationship Matrix -->
    <div class="content-container rounded-xl border overflow-hidden"
         style="background: rgba(254, 247, 237, 0.08); 
                border-color: rgba(254, 247, 237, 0.08);
                box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05), 
                            0 12px 48px rgba(0, 0, 0, 0.12);">
        <div class="px-8 py-6 border-b" style="border-color: rgba(254, 247, 237, 0.1);">
            <h2 class="text-xl font-semibold" style="color: var(--sand-100);">Relationship Matrix</h2>
            <p class="text-sm mt-2" style="color: var(--neutral-400);">Click checkboxes to assign/unassign tags to tools</p>
        </div>
        
        {% if matrix.tools.length > 0 and matrix.tags.length > 0 %}
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead style="background: rgba(254, 247, 237, 0.05);">
                    <tr>
                        <th class="px-8 py-4 text-left text-xs font-medium uppercase tracking-wider sticky left-0 z-10"
                            style="background: rgba(254, 247, 237, 0.08); color: var(--neutral-400);">
                            Tool
                        </th>
                        {% for tag in matrix.tags %}
                        <th class="px-4 py-4 text-center text-xs font-medium uppercase tracking-wider min-w-[120px]"
                            style="color: var(--neutral-400);">
                            <div class="flex flex-col items-center space-y-2">
                                <span 
                                    class="inline-block w-4 h-4 rounded-full border border-white/20"
                                    style="background-color: {{ tag.color or '#6B7280' }}; 
                                           box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);"
                                ></span>
                                <span class="text-xs font-medium" style="color: var(--sand-200);">{{ tag.name }}</span>
                            </div>
                        </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody style="background: rgba(254, 247, 237, 0.02);">
                    {% for tool in matrix.tools %}
                    <tr class="transition-all duration-200 hover:bg-opacity-80"
                        style="background: rgba(254, 247, 237, 0.03);">
                        <td class="px-8 py-6 whitespace-nowrap sticky left-0 z-10 border-r"
                            style="background: rgba(254, 247, 237, 0.08); 
                                   border-color: rgba(254, 247, 237, 0.1);">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 p-2 rounded-lg" 
                                     style="background: rgba(245, 168, 103, 0.1);">
                                    <i class="{{ tool.iconClass or 'fas fa-tool' }}" style="color: var(--sand-400);"></i>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium" style="color: var(--sand-100);">{{ tool.name }}</div>
                                    <div class="text-sm mt-1">
                                        {% if tool.isActive %}
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium border"
                                                  style="background: rgba(16, 185, 129, 0.1); 
                                                         color: var(--green-400); 
                                                         border-color: rgba(16, 185, 129, 0.2);">
                                                Active
                                            </span>
                                        {% else %}
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium border"
                                                  style="background: rgba(156, 163, 175, 0.1); 
                                                         color: var(--neutral-400); 
                                                         border-color: rgba(156, 163, 175, 0.2);">
                                                Inactive
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </td>
                        {% for tag in matrix.tags %}
                        <td class="px-4 py-6 text-center">
                            <input 
                                type="checkbox" 
                                class="h-5 w-5 rounded border-2 transition-all duration-200 focus:ring-2 focus:ring-offset-2"
                                style="color: var(--blue-500); 
                                       border-color: rgba(51, 141, 255, 0.3);
                                       background: rgba(254, 247, 237, 0.1);
                                       focus:ring-color: rgba(51, 141, 255, 0.5);
                                       focus:ring-offset-color: transparent;"
                                data-tool-id="{{ tool.id }}"
                                data-tag-id="{{ tag.id }}"
                                {% if matrix.relationships[tool.id] and tag.id in matrix.relationships[tool.id] %}checked{% endif %}
                                hx-post="/admin/relationships/{{ 'unassign' if matrix.relationships[tool.id] and tag.id in matrix.relationships[tool.id] else 'assign' }}"
                                hx-vals='{"toolId": "{{ tool.id }}", "tagId": "{{ tag.id }}"}'
                                hx-target="#relationship-message"
                                hx-swap="innerHTML"
                            >
                        </td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="px-8 py-16 text-center">
            <div class="p-4 rounded-full mx-auto w-16 h-16 flex items-center justify-center mb-6"
                 style="background: rgba(156, 163, 175, 0.1);">
                <i class="fas fa-link text-2xl" style="color: var(--neutral-400);"></i>
            </div>
            <h3 class="text-xl font-medium mb-3" style="color: var(--sand-100);">No Tools or Tags Available</h3>
            <p class="mb-8" style="color: var(--neutral-400);">Create some tools and tags first to manage relationships.</p>
            <div class="space-x-4">
                <a href="/admin/tools/new" 
                   class="content-container px-6 py-3 rounded-xl transition-all duration-200 hover:scale-105 border inline-block"
                   style="background: linear-gradient(135deg, var(--blue-500) 0%, var(--blue-600) 100%); 
                          color: white; 
                          border-color: rgba(255, 255, 255, 0.1);
                          box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 
                                      0 4px 12px rgba(0, 0, 0, 0.15);">
                    Create Tool
                </a>
                <a href="/admin/tags/new" 
                   class="content-container px-6 py-3 rounded-xl transition-all duration-200 hover:scale-105 border inline-block"
                   style="background: linear-gradient(135deg, var(--sand-400) 0%, var(--sand-500) 100%); 
                          color: white; 
                          border-color: rgba(255, 255, 255, 0.1);
                          box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 
                                      0 4px 12px rgba(0, 0, 0, 0.15);">
                    Create Tag
                </a>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Message Area -->
    <div id="relationship-message" class="hidden"></div>
</div>

<!-- Bulk Assign Modal -->
<div id="bulkAssignModal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0" style="background: rgba(0, 0, 0, 0.5); backdrop-filter: blur(8px);"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="content-container max-w-md w-full rounded-2xl border"
             style="background: rgba(254, 247, 237, 0.15); 
                    border-color: rgba(254, 247, 237, 0.2);
                    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.1), 
                                0 20px 60px rgba(0, 0, 0, 0.3);">
            <div class="px-8 py-6 border-b" style="border-color: rgba(254, 247, 237, 0.1);">
                <h3 class="text-xl font-semibold" style="color: var(--sand-100);">Bulk Assign Tags</h3>
            </div>
            <form hx-post="/admin/relationships/bulk" hx-target="#relationship-message">
                <div class="px-8 py-6 space-y-6">
                    <div>
                        <label class="block text-sm font-medium mb-3" style="color: var(--sand-200);">Select Tools</label>
                        <div class="max-h-32 overflow-y-auto border rounded-xl p-3"
                             style="border-color: rgba(254, 247, 237, 0.2); 
                                    background: rgba(254, 247, 237, 0.05);">
                            {% for tool in matrix.tools %}
                            <label class="flex items-center space-x-3 py-2 px-2 rounded-lg hover:bg-opacity-50 transition-colors"
                                   style="hover:background: rgba(254, 247, 237, 0.08);">
                                <input type="checkbox" name="toolIds" value="{{ tool.id }}" 
                                       class="rounded border-2" 
                                       style="color: var(--blue-500); border-color: rgba(51, 141, 255, 0.3);">
                                <span class="text-sm" style="color: var(--sand-200);">{{ tool.name }}</span>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-3" style="color: var(--sand-200);">Select Tags</label>
                        <div class="max-h-32 overflow-y-auto border rounded-xl p-3"
                             style="border-color: rgba(254, 247, 237, 0.2); 
                                    background: rgba(254, 247, 237, 0.05);">
                            {% for tag in matrix.tags %}
                            <label class="flex items-center space-x-3 py-2 px-2 rounded-lg hover:bg-opacity-50 transition-colors"
                                   style="hover:background: rgba(254, 247, 237, 0.08);">
                                <input type="checkbox" name="tagIds" value="{{ tag.id }}" 
                                       class="rounded border-2" 
                                       style="color: var(--blue-500); border-color: rgba(51, 141, 255, 0.3);">
                                <span 
                                    class="inline-block w-3 h-3 rounded-full mr-2"
                                    style="background-color: {{ tag.color or '#6B7280' }}"
                                ></span>
                                <span class="text-sm" style="color: var(--sand-200);">{{ tag.name }}</span>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="px-8 py-6 border-t flex justify-end space-x-4" 
                     style="border-color: rgba(254, 247, 237, 0.1);">
                    <button type="button" 
                            onclick="closeBulkAssignModal()" 
                            class="px-6 py-3 rounded-xl border transition-all duration-200 hover:scale-105"
                            style="color: var(--neutral-400); 
                                   border-color: rgba(156, 163, 175, 0.3);
                                   background: rgba(156, 163, 175, 0.1);">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="content-container px-6 py-3 rounded-xl transition-all duration-200 hover:scale-105 border"
                            style="background: linear-gradient(135deg, var(--sand-400) 0%, var(--sand-500) 100%); 
                                   color: white; 
                                   border-color: rgba(255, 255, 255, 0.1);
                                   box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 
                                               0 4px 12px rgba(0, 0, 0, 0.15);">
                        Assign Tags
                    </button>
                </div>
                <input type="hidden" name="action" value="assign">
            </form>
        </div>
    </div>
</div>

<!-- Bulk Unassign Modal -->
<div id="bulkUnassignModal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0" style="background: rgba(0, 0, 0, 0.5); backdrop-filter: blur(8px);"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="content-container max-w-md w-full rounded-2xl border"
             style="background: rgba(254, 247, 237, 0.15); 
                    border-color: rgba(254, 247, 237, 0.2);
                    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.1), 
                                0 20px 60px rgba(0, 0, 0, 0.3);">
            <div class="px-8 py-6 border-b" style="border-color: rgba(254, 247, 237, 0.1);">
                <h3 class="text-xl font-semibold" style="color: var(--sand-100);">Bulk Unassign Tags</h3>
            </div>
            <form hx-post="/admin/relationships/bulk" hx-target="#relationship-message">
                <div class="px-8 py-6 space-y-6">
                    <div>
                        <label class="block text-sm font-medium mb-3" style="color: var(--sand-200);">Select Tools</label>
                        <div class="max-h-32 overflow-y-auto border rounded-xl p-3"
                             style="border-color: rgba(254, 247, 237, 0.2); 
                                    background: rgba(254, 247, 237, 0.05);">
                            {% for tool in matrix.tools %}
                            <label class="flex items-center space-x-3 py-2 px-2 rounded-lg hover:bg-opacity-50 transition-colors"
                                   style="hover:background: rgba(254, 247, 237, 0.08);">
                                <input type="checkbox" name="toolIds" value="{{ tool.id }}" 
                                       class="rounded border-2" 
                                       style="color: var(--blue-500); border-color: rgba(51, 141, 255, 0.3);">
                                <span class="text-sm" style="color: var(--sand-200);">{{ tool.name }}</span>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-3" style="color: var(--sand-200);">Select Tags</label>
                        <div class="max-h-32 overflow-y-auto border rounded-xl p-3"
                             style="border-color: rgba(254, 247, 237, 0.2); 
                                    background: rgba(254, 247, 237, 0.05);">
                            {% for tag in matrix.tags %}
                            <label class="flex items-center space-x-3 py-2 px-2 rounded-lg hover:bg-opacity-50 transition-colors"
                                   style="hover:background: rgba(254, 247, 237, 0.08);">
                                <input type="checkbox" name="tagIds" value="{{ tag.id }}" 
                                       class="rounded border-2" 
                                       style="color: var(--blue-500); border-color: rgba(51, 141, 255, 0.3);">
                                <span 
                                    class="inline-block w-3 h-3 rounded-full mr-2"
                                    style="background-color: {{ tag.color or '#6B7280' }}"
                                ></span>
                                <span class="text-sm" style="color: var(--sand-200);">{{ tag.name }}</span>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="px-8 py-6 border-t flex justify-end space-x-4" 
                     style="border-color: rgba(254, 247, 237, 0.1);">
                    <button type="button" 
                            onclick="closeBulkUnassignModal()" 
                            class="px-6 py-3 rounded-xl border transition-all duration-200 hover:scale-105"
                            style="color: var(--neutral-400); 
                                   border-color: rgba(156, 163, 175, 0.3);
                                   background: rgba(156, 163, 175, 0.1);">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="content-container px-6 py-3 rounded-xl transition-all duration-200 hover:scale-105 border"
                            style="background: linear-gradient(135deg, var(--sunset-500) 0%, var(--sunset-600) 100%); 
                                   color: white; 
                                   border-color: rgba(255, 255, 255, 0.1);
                                   box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 
                                               0 4px 12px rgba(0, 0, 0, 0.15);">
                        Unassign Tags
                    </button>
                </div>
                <input type="hidden" name="action" value="unassign">
            </form>
        </div>
    </div>
</div>

<script>
function showBulkAssignModal() {
    document.getElementById('bulkAssignModal').classList.remove('hidden');
}

function closeBulkAssignModal() {
    document.getElementById('bulkAssignModal').classList.add('hidden');
}

function showBulkUnassignModal() {
    document.getElementById('bulkUnassignModal').classList.remove('hidden');
}

function closeBulkUnassignModal() {
    document.getElementById('bulkUnassignModal').classList.add('hidden');
}

// Close modals when clicking outside
document.addEventListener('click', function(event) {
    const assignModal = document.getElementById('bulkAssignModal');
    const unassignModal = document.getElementById('bulkUnassignModal');
    
    if (event.target === assignModal) {
        closeBulkAssignModal();
    }
    if (event.target === unassignModal) {
        closeBulkUnassignModal();
    }
});
</script>

{% endblock %} 