{% extends "layouts/admin-layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Tool-Tag Relationships</h1>
            <p class="text-gray-600 mt-1">Manage which tags are assigned to each tool</p>
        </div>
        <div class="flex space-x-3">
            <button 
                type="button" 
                class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
                onclick="showBulkAssignModal()"
            >
                <i class="fas fa-plus mr-2"></i>Bulk Assign
            </button>
            <button 
                type="button" 
                class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors"
                onclick="showBulkUnassignModal()"
            >
                <i class="fas fa-minus mr-2"></i>Bulk Unassign
            </button>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-2 bg-blue-100 rounded-lg">
                    <i class="fas fa-link text-blue-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Total Relationships</p>
                    <p class="text-2xl font-bold text-gray-900">{{ stats.totalRelationships }}</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-2 bg-green-100 rounded-lg">
                    <i class="fas fa-tools text-green-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Tools with Tags</p>
                    <p class="text-2xl font-bold text-gray-900">{{ stats.toolsWithTags }}</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-2 bg-purple-100 rounded-lg">
                    <i class="fas fa-tags text-purple-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Tags in Use</p>
                    <p class="text-2xl font-bold text-gray-900">{{ stats.tagsInUse }}</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-2 bg-yellow-100 rounded-lg">
                    <i class="fas fa-chart-bar text-yellow-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Avg Tags/Tool</p>
                    <p class="text-2xl font-bold text-gray-900">{{ stats.averageTagsPerTool }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Relationship Matrix -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Relationship Matrix</h2>
            <p class="text-sm text-gray-600 mt-1">Click checkboxes to assign/unassign tags to tools</p>
        </div>
        
        {% if matrix.tools.length > 0 and matrix.tags.length > 0 %}
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider sticky left-0 bg-gray-50 z-10">
                            Tool
                        </th>
                        {% for tag in matrix.tags %}
                        <th class="px-3 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider min-w-[100px]">
                            <div class="flex flex-col items-center space-y-1">
                                <span 
                                    class="inline-block w-3 h-3 rounded-full"
                                    style="background-color: {{ tag.color or '#6B7280' }}"
                                ></span>
                                <span class="text-xs">{{ tag.name }}</span>
                            </div>
                        </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for tool in matrix.tools %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap sticky left-0 bg-white z-10 border-r border-gray-200">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <i class="{{ tool.iconClass or 'fas fa-tool' }} text-gray-400"></i>
                                </div>
                                <div class="ml-3">
                                    <div class="text-sm font-medium text-gray-900">{{ tool.name }}</div>
                                    <div class="text-sm text-gray-500">
                                        {% if tool.isActive %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                                Active
                                            </span>
                                        {% else %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                                Inactive
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </td>
                        {% for tag in matrix.tags %}
                        <td class="px-3 py-4 text-center">
                            <input 
                                type="checkbox" 
                                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded relationship-checkbox"
                                data-tool-id="{{ tool.id }}"
                                data-tag-id="{{ tag.id }}"
                                {% if matrix.relationships[tool.id] and tag.id in matrix.relationships[tool.id] %}checked{% endif %}
                                hx-post="/admin/relationships/{{ 'unassign' if matrix.relationships[tool.id] and tag.id in matrix.relationships[tool.id] else 'assign' }}"
                                hx-vals='{"toolId": "{{ tool.id }}", "tagId": "{{ tag.id }}"}'
                                hx-target="#relationship-message"
                                hx-swap="innerHTML"
                            >
                        </td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="px-6 py-12 text-center">
            <i class="fas fa-link text-gray-400 text-4xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Tools or Tags Available</h3>
            <p class="text-gray-600 mb-4">Create some tools and tags first to manage relationships.</p>
            <div class="space-x-3">
                <a href="/admin/tools/new" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                    Create Tool
                </a>
                <a href="/admin/tags/new" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors">
                    Create Tag
                </a>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Message Area -->
    <div id="relationship-message" class="hidden"></div>
</div>

<!-- Bulk Assign Modal -->
<div id="bulkAssignModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">Bulk Assign Tags</h3>
            </div>
            <form hx-post="/admin/relationships/bulk" hx-target="#relationship-message">
                <div class="px-6 py-4 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Select Tools</label>
                        <div class="max-h-32 overflow-y-auto border border-gray-300 rounded-md p-2">
                            {% for tool in matrix.tools %}
                            <label class="flex items-center space-x-2 py-1">
                                <input type="checkbox" name="toolIds" value="{{ tool.id }}" class="rounded">
                                <span class="text-sm">{{ tool.name }}</span>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Select Tags</label>
                        <div class="max-h-32 overflow-y-auto border border-gray-300 rounded-md p-2">
                            {% for tag in matrix.tags %}
                            <label class="flex items-center space-x-2 py-1">
                                <input type="checkbox" name="tagIds" value="{{ tag.id }}" class="rounded">
                                <span 
                                    class="inline-block w-3 h-3 rounded-full mr-1"
                                    style="background-color: {{ tag.color or '#6B7280' }}"
                                ></span>
                                <span class="text-sm">{{ tag.name }}</span>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    <input type="hidden" name="action" value="assign">
                </div>
                <div class="px-6 py-4 border-t border-gray-200 flex justify-end space-x-3">
                    <button type="button" onclick="hideBulkAssignModal()" class="px-4 py-2 text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        Assign Tags
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bulk Unassign Modal -->
<div id="bulkUnassignModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">Bulk Unassign Tags</h3>
            </div>
            <form hx-post="/admin/relationships/bulk" hx-target="#relationship-message">
                <div class="px-6 py-4 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Select Tools</label>
                        <div class="max-h-32 overflow-y-auto border border-gray-300 rounded-md p-2">
                            {% for tool in matrix.tools %}
                            <label class="flex items-center space-x-2 py-1">
                                <input type="checkbox" name="toolIds" value="{{ tool.id }}" class="rounded">
                                <span class="text-sm">{{ tool.name }}</span>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Select Tags</label>
                        <div class="max-h-32 overflow-y-auto border border-gray-300 rounded-md p-2">
                            {% for tag in matrix.tags %}
                            <label class="flex items-center space-x-2 py-1">
                                <input type="checkbox" name="tagIds" value="{{ tag.id }}" class="rounded">
                                <span 
                                    class="inline-block w-3 h-3 rounded-full mr-1"
                                    style="background-color: {{ tag.color or '#6B7280' }}"
                                ></span>
                                <span class="text-sm">{{ tag.name }}</span>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    <input type="hidden" name="action" value="unassign">
                </div>
                <div class="px-6 py-4 border-t border-gray-200 flex justify-end space-x-3">
                    <button type="button" onclick="hideBulkUnassignModal()" class="px-4 py-2 text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                        Unassign Tags
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function showBulkAssignModal() {
    document.getElementById('bulkAssignModal').classList.remove('hidden');
}

function hideBulkAssignModal() {
    document.getElementById('bulkAssignModal').classList.add('hidden');
}

function showBulkUnassignModal() {
    document.getElementById('bulkUnassignModal').classList.remove('hidden');
}

function hideBulkUnassignModal() {
    document.getElementById('bulkUnassignModal').classList.add('hidden');
}

// Handle checkbox changes for individual relationships
document.addEventListener('htmx:afterRequest', function(event) {
    if (event.detail.target.id === 'relationship-message') {
        // Show message briefly
        const messageEl = document.getElementById('relationship-message');
        messageEl.classList.remove('hidden');
        setTimeout(() => {
            messageEl.classList.add('hidden');
        }, 3000);
        
        // Refresh the page to update the matrix
        setTimeout(() => {
            window.location.reload();
        }, 1000);
    }
});

// Close modals when clicking outside
document.addEventListener('click', function(event) {
    const assignModal = document.getElementById('bulkAssignModal');
    const unassignModal = document.getElementById('bulkUnassignModal');
    
    if (event.target === assignModal) {
        hideBulkAssignModal();
    }
    if (event.target === unassignModal) {
        hideBulkUnassignModal();
    }
});
</script>
{% endblock %} 