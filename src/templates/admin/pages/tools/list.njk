{% extends "layouts/admin-layout.njk" %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-white">Tools Management</h1>
            <p class="text-ocean-100">Manage all tools in the system</p>
        </div>
        <div class="flex gap-2">
            <a href="/admin/tools/advanced" 
               class="admin-btn-secondary flex items-center">
                <i class="fas fa-filter mr-2"></i>Advanced Search
            </a>
            <a href="/admin/tools/new" 
               class="btn-primary flex items-center">
                <i class="fas fa-plus mr-2"></i>Add New Tool
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="content-container">
        <form method="GET" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-64">
                <label for="search" class="admin-form-label">Search</label>
                <input type="text" 
                       id="search" 
                       name="search" 
                       value="{{ filters.search or '' }}"
                       placeholder="Search by name, description, or slug..."
                       class="admin-form-input">
            </div>
            <div>
                <label for="isActive" class="admin-form-label">Status</label>
                <select id="isActive" 
                        name="isActive" 
                        class="admin-form-input admin-form-select">
                    <option value="">All Tools</option>
                    <option value="true" {% if filters.isActive == true %}selected{% endif %}>Active Only</option>
                    <option value="false" {% if filters.isActive == false %}selected{% endif %}>Inactive Only</option>
                </select>
            </div>
            <div class="flex gap-2">
                <button type="submit" 
                        class="admin-btn-secondary">
                    <i class="fas fa-search mr-2"></i>Filter
                </button>
                <a href="/admin/tools" 
                   class="admin-btn-secondary opacity-70 hover:opacity-100">
                    Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Error container for HTMX -->
    <div id="error-container"></div>

    <!-- Tools Table -->
    <div class="admin-table">
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead>
                    <tr>
                        <th>Tool</th>
                        <th>Status</th>
                        <th>Tags</th>
                        <th>Usage</th>
                        <th>Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tool in tools %}
                    <tr>
                        <td>
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10">
                                    <div class="h-10 w-10 rounded-lg flex items-center justify-center" style="background-color: rgba(51, 141, 255, 0.1);">
                                        <i class="{{ tool.iconClass or 'fas fa-tools' }} text-ocean-400"></i>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-white">{{ tool.name }}</div>
                                    <div class="text-sm text-ocean-100/60">{{ tool.slug }}</div>
                                    {% if tool.description %}
                                    <div class="text-xs text-ocean-100/50 mt-1 max-w-xs truncate">{{ tool.description }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if tool.isActive %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium" style="background-color: rgba(34, 197, 94, 0.2); color: var(--success);">
                                <i class="fas fa-check-circle mr-1"></i>Active
                            </span>
                            {% else %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium" style="background-color: rgba(255, 77, 79, 0.2); color: var(--danger);">
                                <i class="fas fa-times-circle mr-1"></i>Inactive
                            </span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="flex flex-wrap gap-1">
                                {% for toolTag in tool.tags %}
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium"
                                      style="background-color: {{ toolTag.tag.color }}20; color: {{ toolTag.tag.color }};">
                                    {{ toolTag.tag.name }}
                                </span>
                                {% endfor %}
                                {% if tool.tags.length == 0 %}
                                <span class="text-ocean-100/60 text-sm">No tags</span>
                                {% endif %}
                            </div>
                        </td>
                        <td class="text-white">
                            {{ tool.usageCount or 0 }}
                        </td>
                        <td class="text-white">
                            {{ tool.displayOrder }}
                        </td>
                        <td>
                            <div class="flex items-center space-x-2">
                                <a href="/admin/tools/{{ tool.id }}" 
                                   class="text-ocean-400 hover:text-white transition-colors" 
                                   title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/admin/tools/{{ tool.id }}/edit" 
                                   class="text-sand-300 hover:text-white transition-colors" 
                                   title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="POST" 
                                      action="/admin/tools/{{ tool.id }}/toggle" 
                                      class="inline"
                                      hx-post="/admin/tools/{{ tool.id }}/toggle"
                                      hx-confirm="Are you sure you want to {{ 'deactivate' if tool.isActive else 'activate' }} this tool?">
                                    <button type="submit" 
                                            class="{{ 'text-sand-700 hover:text-white' if tool.isActive else 'text-success hover:text-white' }} transition-colors" 
                                            title="{{ 'Deactivate' if tool.isActive else 'Activate' }}">
                                        <i class="fas fa-{{ 'pause' if tool.isActive else 'play' }}"></i>
                                    </button>
                                </form>
                                <form method="POST" 
                                      action="/admin/tools/{{ tool.id }}" 
                                      class="inline"
                                      hx-delete="/admin/tools/{{ tool.id }}"
                                      hx-confirm="Are you sure you want to delete this tool? This action cannot be undone.">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" 
                                            class="text-danger hover:text-white transition-colors" 
                                            title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                    {% if tools.length == 0 %}
                    <tr>
                        <td colspan="6" class="text-center py-12 text-ocean-100/60">
                            <i class="fas fa-tools text-4xl mb-4 text-ocean-400/50"></i>
                            <div class="text-lg font-medium">No tools found</div>
                            <div class="text-sm">
                                {% if filters.search or filters.isActive !== undefined %}
                                Try adjusting your filters or <a href="/admin/tools" class="text-sand-300 hover:text-white transition-colors">clear all filters</a>.
                                {% else %}
                                <a href="/admin/tools/new" class="text-sand-300 hover:text-white transition-colors">Create your first tool</a> to get started.
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if pagination.total > 1 %}
        <div class="px-4 py-3 flex items-center justify-between border-t border-ocean-400/10 sm:px-6">
            <div class="flex-1 flex justify-between sm:hidden">
                {% if pagination.current > 1 %}
                <a href="?page={{ pagination.current - 1 }}{% if filters.search %}&search={{ filters.search }}{% endif %}{% if filters.isActive !== undefined %}&isActive={{ filters.isActive }}{% endif %}" 
                   class="admin-btn-secondary">
                    Previous
                </a>
                {% endif %}
                {% if pagination.current < pagination.total %}
                <a href="?page={{ pagination.current + 1 }}{% if filters.search %}&search={{ filters.search }}{% endif %}{% if filters.isActive !== undefined %}&isActive={{ filters.isActive }}{% endif %}" 
                   class="admin-btn-secondary">
                    Next
                </a>
                {% endif %}
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-ocean-100">
                        Showing 
                        <span class="font-medium text-white">{{ pagination.start }}</span>
                        to 
                        <span class="font-medium text-white">{{ pagination.end }}</span>
                        of 
                        <span class="font-medium text-white">{{ pagination.total }}</span>
                        results
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                        {% if pagination.current > 1 %}
                        <a href="?page={{ pagination.current - 1 }}{% if filters.search %}&search={{ filters.search }}{% endif %}{% if filters.isActive !== undefined %}&isActive={{ filters.isActive }}{% endif %}" 
                           class="admin-btn-secondary rounded-l-md">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                        {% endif %}
                        
                        {% for page in pagination.pages %}
                        {% if page == pagination.current %}
                        <span class="btn-primary border-ocean-400 relative inline-flex items-center px-4 py-2 text-sm font-medium">
                            {{ page }}
                        </span>
                        {% else %}
                        <a href="?page={{ page }}{% if filters.search %}&search={{ filters.search }}{% endif %}{% if filters.isActive !== undefined %}&isActive={{ filters.isActive }}{% endif %}" 
                           class="admin-btn-secondary">
                            {{ page }}
                        </a>
                        {% endif %}
                        {% endfor %}
                        
                        {% if pagination.current < pagination.total %}
                        <a href="?page={{ pagination.current + 1 }}{% if filters.search %}&search={{ filters.search }}{% endif %}{% if filters.isActive !== undefined %}&isActive={{ filters.isActive }}{% endif %}" 
                           class="admin-btn-secondary rounded-r-md">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %} 