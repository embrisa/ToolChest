{# src/templates/admin/pages/dashboard.njk #}
{% extends "layouts/admin-layout.njk" %}

{% block pageTitle %}Dashboard{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Welcome message -->
    <div class="content-container">
        <h3 class="text-lg font-medium text-white mb-2">
            Welcome back, {{ adminUser.username }}!
        </h3>
        <p class="text-ocean-100">
            You are logged in as <span class="font-medium text-sand-300">{{ adminUser.role }}</span>. 
            Use the navigation menu to manage your ToolChest application.
        </p>
    </div>

    <!-- Quick stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="content-container">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-wrench text-2xl text-ocean-400"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-ocean-100">Active Tools</p>
                    <p class="text-2xl font-semibold text-white">{{ metrics.totalActiveTools | default(0) }}</p>
                </div>
            </div>
        </div>

        <div class="content-container">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-tags text-2xl text-sand-300"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-ocean-100">Total Tags</p>
                    <p class="text-2xl font-semibold text-white">{{ metrics.totalTags | default(0) }}</p>
                </div>
            </div>
        </div>

        <div class="content-container">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-chart-line text-2xl text-ocean-700"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-ocean-100">Recent Usage</p>
                    <p class="text-2xl font-semibold text-white">{{ metrics.recentToolUsage | default(0) }}</p>
                </div>
            </div>
        </div>

        <div class="content-container">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-heartbeat text-2xl {% if metrics.systemHealth == 'healthy' %}text-success{% elif metrics.systemHealth == 'warning' %}text-sand-300{% else %}text-danger{% endif %}"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-ocean-100">System Health</p>
                    <p class="text-lg font-semibold {% if metrics.systemHealth == 'healthy' %}text-success{% elif metrics.systemHealth == 'warning' %}text-sand-300{% else %}text-danger{% endif %}">
                        {{ (metrics.systemHealth | default('Unknown')) | title }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick actions -->
    <div class="content-container">
        <h3 class="text-lg font-medium text-white mb-4">Quick Actions</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a href="/admin/tools/new" class="tool-card p-4 flex items-center hover:scale-105 transition-transform">
                <i class="fas fa-plus-circle text-ocean-400 mr-3 text-xl"></i>
                <span class="font-medium text-white">Add New Tool</span>
            </a>
            <a href="/admin/tags/new" class="tool-card p-4 flex items-center hover:scale-105 transition-transform">
                <i class="fas fa-tag text-sand-300 mr-3 text-xl"></i>
                <span class="font-medium text-white">Create New Tag</span>
            </a>
            <a href="/admin/analytics" class="tool-card p-4 flex items-center hover:scale-105 transition-transform">
                <i class="fas fa-chart-bar text-ocean-700 mr-3 text-xl"></i>
                <span class="font-medium text-white">View Analytics</span>
            </a>
        </div>
    </div>
</div>
{% endblock %} 