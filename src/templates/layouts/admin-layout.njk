{# src/templates/layouts/admin-layout.njk #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Dashboard - ToolChest{% endblock %}</title>
    <meta name="description" content="{% block description %}ToolChest Admin Dashboard{% endblock %}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://unpkg.com/htmx.org@1.9.0"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/static/css/main.css">
    {% block headContent %}{% endblock %}
</head>
<body class="min-h-screen" style="background: var(--spacey-bg); background-attachment: fixed;">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 backdrop-blur-md border-r border-ocean-400/10 flex flex-col" style="background-color: rgba(2, 29, 44, 0.8);">
            <!-- Logo -->
            <div class="p-4 border-b border-ocean-400/10">
                <h1 class="text-xl font-bold">
                    <a href="/admin/dashboard" class="logo text-white hover:opacity-80 transition-opacity">
                        &lt;TC&gt; Admin
                    </a>
                </h1>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 p-4">
                <ul class="space-y-2">
                    <li>
                        <a href="/admin/dashboard" class="flex items-center p-3 rounded-lg transition-all duration-200 text-white hover:bg-ocean-400/20 {% if currentPath == '/admin/dashboard' %}bg-ocean-700/30 border border-ocean-400/20{% endif %}">
                            <i class="fas fa-tachometer-alt mr-3 text-ocean-400"></i>Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/admin/tools" class="flex items-center p-3 rounded-lg transition-all duration-200 text-white hover:bg-ocean-400/20 {% if currentPath.startsWith('/admin/tools') %}bg-ocean-700/30 border border-ocean-400/20{% endif %}">
                            <i class="fas fa-wrench mr-3 text-ocean-400"></i>Tools
                        </a>
                    </li>
                    <li>
                        <a href="/admin/tags" class="flex items-center p-3 rounded-lg transition-all duration-200 text-white hover:bg-ocean-400/20 {% if currentPath.startsWith('/admin/tags') %}bg-ocean-700/30 border border-ocean-400/20{% endif %}">
                            <i class="fas fa-tags mr-3 text-ocean-400"></i>Tags
                        </a>
                    </li>
                    <li>
                        <a href="/admin/relationships" class="flex items-center p-3 rounded-lg transition-all duration-200 text-white hover:bg-ocean-400/20 {% if currentPath.startsWith('/admin/relationships') %}bg-ocean-700/30 border border-ocean-400/20{% endif %}">
                            <i class="fas fa-link mr-3 text-ocean-400"></i>Relationships
                        </a>
                    </li>
                    <li>
                        <a href="/admin/analytics" class="flex items-center p-3 rounded-lg transition-all duration-200 text-white hover:bg-ocean-400/20 {% if currentPath.startsWith('/admin/analytics') %}bg-ocean-700/30 border border-ocean-400/20{% endif %}">
                            <i class="fas fa-chart-bar mr-3 text-ocean-400"></i>Analytics
                        </a>
                    </li>
                    {% if adminUser and adminUser.role == 'SUPER_ADMIN' %}
                    <li>
                        <a href="/admin/users" class="flex items-center p-3 rounded-lg transition-all duration-200 text-white hover:bg-ocean-400/20 {% if currentPath.startsWith('/admin/users') %}bg-ocean-700/30 border border-ocean-400/20{% endif %}">
                            <i class="fas fa-users mr-3 text-ocean-400"></i>Users
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </nav>

            <!-- User info and logout -->
            <div class="p-4 border-t border-ocean-400/10">
                <div class="flex items-center justify-between">
                    <div class="text-sm">
                        <div class="font-medium text-white">{{ adminUser.username }}</div>
                        <div class="text-ocean-100 text-xs">{{ adminUser.role }}</div>
                    </div>
                    <form hx-post="/admin/auth/logout" hx-confirm="Are you sure you want to logout?">
                        <button type="submit" class="text-ocean-100 hover:text-white transition-colors p-2 rounded-lg hover:bg-ocean-400/20" title="Logout">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top bar -->
            <header class="backdrop-blur-md border-b border-ocean-400/10 p-4" style="background-color: rgba(2, 29, 44, 0.6);">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-white">
                        {% block pageTitle %}Dashboard{% endblock %}
                    </h2>
                    <div class="flex items-center space-x-4">
                        <a href="/" target="_blank" class="text-ocean-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-ocean-400/20" title="View Site">
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                    </div>
                </div>
            </header>

            <!-- Content area -->
            <main class="flex-1 overflow-y-auto p-6">
                {% block content %}{% endblock %}
            </main>
        </div>
    </div>

    {% block bodyScripts %}{% endblock %}
</body>
</html> 