/* ================================================================
   CSS RESET - Modern, comprehensive reset for all form elements
   ================================================================ */

/* Box sizing reset */
*,
*::before,
*::after {
    box-sizing: border-box;
}

/* Remove default margins and paddings */
* {
    margin: 0;
    padding: 0;
}

/* Reset HTML5 display-role for older browsers */
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section {
    display: block;
}

/* Basic document reset */
html,
body {
    height: 100%;
    line-height: 1.6;
    -webkit-text-size-adjust: 100%;
    -moz-text-size-adjust: 100%;
    text-size-adjust: 100%;
}

/* Form elements reset */
button,
input,
optgroup,
select,
textarea {
    font-family: inherit;
    font-size: inherit;
    line-height: inherit;
    margin: 0;
    padding: 0;
    border: none;
    background: transparent;
    color: inherit;
}

/* Button reset */
button {
    cursor: pointer;
    border: none;
    background: none;
    font: inherit;
    outline: inherit;
}

button::-moz-focus-inner {
    border: 0;
    padding: 0;
}

/* Input reset */
input[type="text"],
input[type="email"],
input[type="password"],
input[type="search"],
input[type="number"],
input[type="tel"],
input[type="url"],
input[type="file"],
textarea,
select {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    border-radius: 0;
    background-clip: padding-box;
}

/* Remove browser-specific search input styling */
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration {
    -webkit-appearance: none;
}

/* Reset checkbox and radio styling */
input[type="checkbox"],
input[type="radio"] {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background: rgba(42, 34, 27, 0.3);
    margin: 0;
    font: inherit;
    color: var(--sand-300);
    width: 1.15em;
    height: 1.15em;
    border: 1px solid rgba(249, 200, 150, 0.15);
    border-radius: 0.15em;
    transform: translateY(-0.075em);
    display: inline-grid;
    place-content: center;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
}

input[type="radio"] {
    border-radius: 50%;
}

input[type="checkbox"]::before,
input[type="radio"]::before {
    content: "";
    width: 0.65em;
    height: 0.65em;
    transform: scale(0);
    transition: 120ms transform ease-in-out;
    box-shadow: inset 1em 1em currentColor;
}

input[type="radio"]::before {
    border-radius: 50%;
}

input[type="checkbox"]:checked::before,
input[type="radio"]:checked::before {
    transform: scale(1);
}

/* Select dropdown reset */
select {
    background-color: transparent;
    padding-right: 2em;
}

/* Remove default list styling */
ol,
ul {
    list-style: none;
}

/* Table reset */
table {
    border-collapse: collapse;
    border-spacing: 0;
}

/* Link reset */
a {
    color: inherit;
    text-decoration: none;
}

/* Image reset */
img,
picture,
video,
canvas,
svg {
    display: block;
    max-width: 100%;
    height: auto;
}

/* ================================================================
   DESIGN SYSTEM - Enhanced Apple-inspired sunset/sand theme
   ================================================================ */

:root {
    /* Core Sand/Sunset Palette - Warm, professional tones */
    --sand-50: #FEF7ED;
    /* Lightest cream - card backgrounds */
    --sand-100: #FDF2E3;
    /* Very light beige - subtle highlights */
    --sand-200: #FCE1C4;
    /* Light beige - hover states */
    --sand-300: #F9C896;
    /* Warm sand - accents */
    --sand-400: #F5A867;
    /* Medium sand - primary buttons */
    --sand-500: #E8955E;
    /* Rich sand - active states */
    --sand-600: #D67C47;
    /* Deep sand - emphasis */
    --sand-700: #B85D2A;
    /* Dark sand - headings */
    --sand-800: #8B4513;
    /* Saddle brown - strong contrast */

    /* Complementary Sunset Orange Palette */
    --sunset-400: #FF8C42;
    /* Warm orange - call-to-action */
    --sunset-500: #FF7733;
    /* Main orange - primary brand */
    --sunset-600: #E55B22;
    /* Deep orange - hover states */
    --sunset-700: #CC4A1A;
    /* Darker orange - active states */

    /* Supporting Earth Tones */
    --amber-300: #FCD34D;
    /* Golden yellow - success states */
    --amber-600: #D97706;
    /* Deep amber - warning states */

    /* Professional Neutrals - Enhanced for Apple-style readability */
    --neutral-50: #FAFAF9;
    --neutral-100: #F5F5F4;
    --neutral-200: #E7E5E4;
    --neutral-300: #D6D3D1;
    --neutral-400: #A8A29E;
    --neutral-500: #78716C;
    --neutral-600: #57534E;
    --neutral-700: #44403C;
    --neutral-800: #292524;
    --neutral-900: #1C1917;

    /* Dark Theme Colors - Enhanced glass foundation */
    --dark-900: #0F0A08;
    --dark-800: #1A1510;
    --dark-700: #2A221B;

    /* Apple-style Blue Accents */
    --apple-blue: #007AFF;
    --apple-blue-light: #4DA2FF;
    --apple-blue-dark: #0056CC;

    /* State Colors */
    --success: #30D158;
    /* Apple-style green */
    --warning: #FF9F0A;
    /* Apple-style orange */
    --error: #FF453A;
    /* Apple-style red */
    --info: #64D2FF;
    /* Apple-style cyan */

    /* Enhanced gradients with Apple-style sophistication */
    --accent-gradient: linear-gradient(135deg,
            #FCD34D 0%,
            #F9C896 20%,
            #F5A867 40%,
            #E8955E 60%,
            #6FB8FF 80%,
            #007AFF 100%);

    --hero-gradient: linear-gradient(135deg,
            #FEF7ED 0%,
            #F9C896 30%,
            #E8955E 60%,
            #6FB8FF 85%,
            #007AFF 100%);

    /* Enhanced cosmic background with Apple-style sophistication */
    --spacey-bg:
        radial-gradient(ellipse at 75% -10%, rgba(0, 122, 255, 0.25) 0%, transparent 60%),
        radial-gradient(circle at 25% 90%, rgba(100, 210, 255, 0.12) 0%, transparent 50%),
        radial-gradient(circle at 10% 80%, rgba(245, 168, 103, 0.18) 0%, transparent 40%),
        radial-gradient(circle at 90% 40%, rgba(252, 211, 77, 0.12) 0%, transparent 45%),
        radial-gradient(circle at 50% 70%, rgba(180, 83, 9, 0.08) 0%, transparent 35%),
        linear-gradient(135deg, var(--dark-900) 0%, var(--dark-800) 100%);

    /* Apple-style Typography scale */
    --font-size-xs: 0.75rem;
    /* 12px */
    --font-size-sm: 0.875rem;
    /* 14px */
    --font-size-base: 1rem;
    /* 16px */
    --font-size-lg: 1.125rem;
    /* 18px */
    --font-size-xl: 1.25rem;
    /* 20px */
    --font-size-2xl: 1.5rem;
    /* 24px */
    --font-size-3xl: 1.875rem;
    /* 30px */
    --font-size-4xl: 2.25rem;
    /* 36px */
    --font-size-5xl: 3rem;
    /* 48px */
    --font-size-6xl: 3.75rem;
    /* 60px */

    /* Apple-style spacing scale */
    --space-0-5: 0.125rem;
    /* 2px */
    --space-1: 0.25rem;
    /* 4px */
    --space-1-5: 0.375rem;
    /* 6px */
    --space-2: 0.5rem;
    /* 8px */
    --space-2-5: 0.625rem;
    /* 10px */
    --space-3: 0.75rem;
    /* 12px */
    --space-3-5: 0.875rem;
    /* 14px */
    --space-4: 1rem;
    /* 16px */
    --space-5: 1.25rem;
    /* 20px */
    --space-6: 1.5rem;
    /* 24px */
    --space-7: 1.75rem;
    /* 28px */
    --space-8: 2rem;
    /* 32px */
    --space-10: 2.5rem;
    /* 40px */
    --space-12: 3rem;
    /* 48px */
    --space-16: 4rem;
    /* 64px */
    --space-20: 5rem;
    /* 80px */

    /* Apple-style border radius */
    --radius-xs: 0.25rem;
    /* 4px */
    --radius-sm: 0.375rem;
    /* 6px */
    --radius-md: 0.5rem;
    /* 8px */
    --radius-lg: 0.75rem;
    /* 12px */
    --radius-xl: 1rem;
    /* 16px */
    --radius-2xl: 1.5rem;
    /* 24px */
    --radius-3xl: 2rem;
    /* 32px */

    /* Enhanced Apple-style shadows */
    --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
    --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);

    /* Apple-style inset shadows for glass effects */
    --shadow-inset-sm: inset 0 1px 2px 0 rgba(255, 255, 255, 0.05);
    --shadow-inset-md: inset 0 2px 4px 0 rgba(255, 255, 255, 0.06);

    /* Apple-style focus ring */
    --focus-ring: 0 0 0 3px rgba(0, 122, 255, 0.15);
    --focus-ring-dark: 0 0 0 3px rgba(100, 210, 255, 0.2);
}

/* ================================================================
   BASE STYLES - Enhanced Apple-style typography and layout
   ================================================================ */

body {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Icons', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
    font-weight: 400;
    font-size: var(--font-size-base);
    line-height: 1.6;
    color: var(--neutral-50);
    background: var(--spacey-bg);
    background-attachment: fixed;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    min-height: 100vh;
    letter-spacing: -0.01em;
    /* Apple-style tight letter spacing */
}

@media (min-width: 1024px) {
    body {
        font-size: var(--font-size-lg);
        line-height: 1.7;
    }
}

/* Enhanced Apple-style typography hierarchy */
h1,
h2,
h3,
h4,
h5,
h6 {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
    font-weight: 600;
    line-height: 1.2;
    color: var(--neutral-50);
    margin-bottom: var(--space-4);
    letter-spacing: -0.02em;
    /* Tighter spacing for headlines */
}

h1 {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: var(--sand-100);
    letter-spacing: -0.025em;
    margin-bottom: var(--space-6);
}

@media (min-width: 768px) {
    h1 {
        font-size: var(--font-size-5xl);
    }
}

@media (min-width: 1024px) {
    h1 {
        font-size: var(--font-size-6xl);
        letter-spacing: -0.03em;
    }
}

h2 {
    font-size: var(--font-size-3xl);
    color: var(--sand-200);
    font-weight: 600;
    margin-bottom: var(--space-5);
}

h3 {
    font-size: var(--font-size-2xl);
    color: var(--sand-300);
    font-weight: 600;
    margin-bottom: var(--space-4);
}

h4,
h5,
h6 {
    font-size: var(--font-size-xl);
    color: var(--neutral-200);
    font-weight: 500;
    margin-bottom: var(--space-3);
}

p {
    margin-bottom: var(--space-4);
    color: var(--neutral-200);
    line-height: 1.7;
}

/* Apple-style links with enhanced interactions */
a {
    color: var(--sand-300);
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    /* Apple's easing curve */
    border-radius: var(--radius-sm);
}

a:hover {
    color: var(--sand-200);
    text-decoration: underline;
    text-decoration-color: rgba(249, 200, 150, 0.4);
    text-underline-offset: 0.25em;
}

a:focus {
    outline: none;
    box-shadow: var(--focus-ring);
    color: var(--apple-blue-light);
}

/* ================================================================
   ENHANCED APPLE-STYLE COMPONENT STYLES
   ================================================================ */



/* Apple-style logo with enhanced gradient */
.logo {
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
    font-weight: 800;
    letter-spacing: -0.02em;
    filter: drop-shadow(0 2px 8px rgba(0, 122, 255, 0.15));
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none !important;
}

.logo:hover {
    filter: drop-shadow(0 4px 12px rgba(0, 122, 255, 0.2));
    transform: translateY(-1px);
}

.logo:focus {
    box-shadow: var(--focus-ring);
}





/* Enhanced Apple-style tag badges */
.tag-badge {
    display: inline-flex;
    align-items: center;
    font-size: var(--font-size-xs);
    font-weight: 500;
    padding: var(--space-1-5) var(--space-3);
    border-radius: 20px;
    /* Apple-style pill shape */
    background: rgba(254, 247, 237, 0.06);
    color: var(--neutral-300);
    border: 0.5px solid rgba(254, 247, 237, 0.1);
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
}

.tag-badge:hover {
    background: rgba(254, 247, 237, 0.12);
    border-color: rgba(254, 247, 237, 0.18);
    color: var(--sand-200);
    transform: translateY(-1px);
}

/* Dynamic colored tag badges using CSS custom properties */
.tag-badge-colored {
    --tag-color: #6B7280;
    /* Default fallback color */
    display: inline-flex;
    align-items: center;
    font-size: var(--font-size-xs);
    font-weight: 500;
    padding: var(--space-1-5) var(--space-3);
    border-radius: 20px;
    /* Apple-style pill shape */
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    /* Inline styles from template will be used as fallback */
}

.tag-badge-colored:hover {
    transform: translateY(-1px);
    /* Enhanced hover effects for modern browsers */
    filter: brightness(1.1);
}

/* Modern browsers that support color-mix will override inline styles */
@supports (background: color-mix(in srgb, red 20%, transparent)) {
    .tag-badge-colored {
        background: color-mix(in srgb, var(--tag-color) 20%, transparent) !important;
        color: var(--tag-color) !important;
        border: 0.5px solid color-mix(in srgb, var(--tag-color) 30%, transparent) !important;
    }

    .tag-badge-colored:hover {
        background: color-mix(in srgb, var(--tag-color) 30%, transparent) !important;
        border-color: color-mix(in srgb, var(--tag-color) 40%, transparent) !important;
        filter: none;
    }
}

/* Safari compatibility fixes for tag-badge-colored - to be added to existing Safari detection sections */

/* ================================================================
   DEFAULT FORM ELEMENT STYLING - Apple-inspired defaults
   ================================================================ */

/* Default input styling - applies to all input types */
input[type="text"],
input[type="email"],
input[type="password"],
input[type="search"],
input[type="number"],
input[type="tel"],
input[type="url"],
input[type="date"],
input[type="datetime-local"],
input[type="month"],
input[type="time"],
input[type="week"] {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    border: 0.5px solid rgba(249, 200, 150, 0.12);
    border-radius: var(--radius-lg);
    background: rgba(42, 34, 27, 0.7);
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    color: var(--neutral-100);
    font-size: var(--font-size-base);
    font-weight: 400;
    line-height: 1.5;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05),
        0 4px 16px rgba(0, 0, 0, 0.08);
    letter-spacing: -0.01em;
}

input[type="text"]:focus,
input[type="email"]:focus,
input[type="password"]:focus,
input[type="search"]:focus,
input[type="number"]:focus,
input[type="tel"]:focus,
input[type="url"]:focus,
input[type="date"]:focus,
input[type="datetime-local"]:focus,
input[type="month"]:focus,
input[type="time"]:focus,
input[type="week"]:focus {
    border-color: rgba(0, 122, 255, 0.4);
    box-shadow: var(--focus-ring-dark),
        inset 0 1px 0 rgba(254, 247, 237, 0.05),
        0 8px 32px rgba(0, 0, 0, 0.12);
    background: rgba(42, 34, 27, 0.85);
    transform: translateY(-1px);
}

input[type="text"]::placeholder,
input[type="email"]::placeholder,
input[type="password"]::placeholder,
input[type="search"]::placeholder,
input[type="number"]::placeholder,
input[type="tel"]::placeholder,
input[type="url"]::placeholder {
    color: var(--neutral-400);
    font-weight: 400;
    opacity: 1;
}

/* Default textarea styling */
textarea {
    width: 100%;
    padding: var(--space-5) var(--space-5);
    border: 0.5px solid rgba(249, 200, 150, 0.12);
    border-radius: var(--radius-lg);
    background: rgba(42, 34, 27, 0.7);
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    color: var(--neutral-100);
    font-size: var(--font-size-base);
    font-weight: 400;
    line-height: 1.6;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
    resize: vertical;
    min-height: 140px;
    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05),
        0 4px 16px rgba(0, 0, 0, 0.08);
    letter-spacing: -0.01em;
}

textarea:focus {
    border-color: rgba(0, 122, 255, 0.4);
    box-shadow: var(--focus-ring-dark),
        inset 0 1px 0 rgba(254, 247, 237, 0.05),
        0 8px 32px rgba(0, 0, 0, 0.12);
    background: rgba(42, 34, 27, 0.85);
    transform: translateY(-1px);
}

textarea::placeholder {
    color: var(--neutral-400);
    font-weight: 400;
    opacity: 1;
}

/* Default select styling */
select {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    padding-right: var(--space-10);
    /* Space for dropdown arrow */
    border: 0.5px solid rgba(249, 200, 150, 0.12);
    border-radius: var(--radius-lg);
    background: rgba(42, 34, 27, 0.7);
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    color: var(--neutral-100);
    font-size: var(--font-size-base);
    font-weight: 400;
    line-height: 1.5;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
    cursor: pointer;
    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05),
        0 4px 16px rgba(0, 0, 0, 0.08);
    letter-spacing: -0.01em;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23A8A29E' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6,9 12,15 18,9'%3e%3c/polyline%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right var(--space-3) center;
    background-size: 1rem;
}

select:focus {
    border-color: rgba(0, 122, 255, 0.4);
    box-shadow: var(--focus-ring-dark),
        inset 0 1px 0 rgba(254, 247, 237, 0.05),
        0 8px 32px rgba(0, 0, 0, 0.12);
    background: rgba(42, 34, 27, 0.85);
    transform: translateY(-1px);
}

/* Default button styling */
button,
input[type="button"],
input[type="submit"],
input[type="reset"] {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4) var(--space-8);
    border: 0.5px solid rgba(249, 200, 150, 0.15);
    border-radius: var(--radius-lg);
    background: rgba(249, 200, 150, 0.1);
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    color: var(--sand-200);
    font-size: var(--font-size-base);
    font-weight: 500;
    line-height: 1.5;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.05),
        0 4px 16px rgba(0, 0, 0, 0.06);
    letter-spacing: -0.01em;
    min-height: 48px;
    /* Minimum touch target */
}

button:hover,
input[type="button"]:hover,
input[type="submit"]:hover,
input[type="reset"]:hover {
    background: rgba(249, 200, 150, 0.15);
    border-color: rgba(249, 200, 150, 0.2);
    color: var(--sand-100);
    transform: translateY(-1px);
    box-shadow: inset 0 1px 0 rgba(254, 247, 237, 0.08),
        0 6px 24px rgba(0, 0, 0, 0.08);
}

button:focus,
input[type="button"]:focus,
input[type="submit"]:focus,
input[type="reset"]:focus {
    box-shadow: var(--focus-ring-dark),
        inset 0 1px 0 rgba(254, 247, 237, 0.05),
        0 4px 16px rgba(0, 0, 0, 0.06);
}

button:active,
input[type="button"]:active,
input[type="submit"]:active,
input[type="reset"]:active {
    transform: translateY(0);
    transition: all 0.1s ease;
}

button:disabled,
input[type="button"]:disabled,
input[type="submit"]:disabled,
input[type="reset"]:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
}

button:disabled:hover,
input[type="button"]:disabled:hover,
input[type="submit"]:disabled:hover,
input[type="reset"]:disabled:hover {
    background: rgba(249, 200, 150, 0.1);
    border-color: rgba(249, 200, 150, 0.15);
    transform: none;
}

/* File input styling */
input[type="file"] {
    width: 100%;
    padding: var(--space-4);
